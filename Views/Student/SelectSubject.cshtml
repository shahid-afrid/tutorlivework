@using TutorLiveMentor.Models
@using TutorLiveMentor.Controllers
@using Microsoft.AspNetCore.Mvc
@using System.Linq
@model TutorLiveMentor.Controllers.StudentDashboardViewModel

@{
    ViewData["Title"] = "Select Faculty";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Select Faculty - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --warning-orange: #fd7e14;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1600px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .nav-link {
            position: fixed;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            z-index: 100;
        }

        .nav-link:hover {
            background: var(--warm-gold);
            color: var(--royal-blue);
            transform: translateY(-2px);
            text-decoration: none;
        }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 40px;
            border: 2px solid var(--slate);
        }

        .dashboard-header h2 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0 0 10px 0;
            letter-spacing: 1.2px;
        }

        .user-info {
            font-size: 1.1em;
            color: #666;
            font-weight: 500;
        }

        .user-info strong {
            color: var(--royal-blue);
        }

        /* Real-time Status */
        .connection-status {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 8px 15px;
            border-radius: 15px;
            font-weight: 600;
            font-size: 0.9em;
            z-index: 100;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            backdrop-filter: blur(8px);
        }

        .connection-status.connected {
            background: rgba(40, 167, 69, 0.9);
            color: white;
        }

        .connection-status.disconnected {
            background: rgba(220, 53, 69, 0.9);
            color: white;
        }

        .status-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            display: inline-block;
            animation: pulse-dot 2s infinite;
        }

        .status-dot.connected {
            background: #00ff00;
            box-shadow: 0 0 6px #00ff00;
        }

        .status-dot.disconnected {
            background: #ff0000;
            box-shadow: 0 0 6px #ff0000;
        }

        .status-dot.connecting {
            background: #ffaa00;
            box-shadow: 0 0 6px #ffaa00;
        }

        @@keyframes pulse-dot {
            0%, 100% { opacity: 1; transform: scale(1); }
            50% { opacity: 0.7; transform: scale(1.1); }
        }

        /* Alerts */
        .alert {
            padding: 18px 24px;
            margin-bottom: 30px;
            border: 3px solid transparent;
            border-radius: 15px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 1.1em;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            backdrop-filter: blur(10px);
            animation: slideDown 0.5s ease;
        }

        .alert-success {
            color: #155724;
            background: linear-gradient(135deg, rgba(212, 237, 218, 0.98), rgba(195, 230, 203, 0.98));
            border-color: var(--success-green);
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
        }

        .alert-danger {
            color: #721c24;
            background: linear-gradient(135deg, rgba(248, 215, 218, 0.98), rgba(242, 200, 203, 0.98));
            border-color: var(--error-red);
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.3);
        }

        .alert-info {
            color: #004085;
            background: linear-gradient(135deg, rgba(217, 237, 247, 0.98), rgba(190, 229, 250, 0.98));
            border-color: #17a2b8;
            box-shadow: 0 8px 25px rgba(23, 162, 184, 0.3);
        }

        .alert i {
            font-size: 1.5em;
            animation: bounceIn 0.6s ease;
        }

        @@keyframes slideDown {
            from { opacity: 0; transform: translateY(-30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @@keyframes bounceIn {
            0% { transform: scale(0); opacity: 0; }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); opacity: 1; }
        }

        /* MAIN GRID LAYOUT - Side by side */
        .subjects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
            gap: 30px;
            margin-bottom: 50px;
        }

        /* SUBJECT CARD - Core and Elective Subjects */
        .subject-section {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 3px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            transition: all 0.3s ease;
        }

        .subject-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 45px var(--card-shadow);
            border-color: var(--warm-gold);
        }

        .section-title {
            font-size: 1.8em;
            font-weight: 700;
            color: var(--royal-blue);
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 3px solid var(--warm-gold);
            text-align: center;
            letter-spacing: 0.5px;
        }

        .section-subtitle {
            font-size: 0.95em;
            color: #666;
            text-align: center;
            margin-bottom: 25px;
            font-weight: 500;
        }

        .section-subtitle strong {
            color: var(--error-red);
        }

        /* Faculty/Subject Items List */
        .items-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .item-card {
            background: rgba(249, 250, 242, 0.9);
            border: 2px solid var(--slate);
            border-radius: 12px;
            padding: 18px 20px;
            transition: all 0.3s ease;
        }

        .item-card:hover {
            background: rgba(255, 255, 255, 0.95);
            border-color: var(--warm-gold);
            transform: translateX(5px);
            box-shadow: 0 4px 15px var(--card-shadow);
        }

        .item-card.full {
            opacity: 0.65;
            border-color: var(--error-red);
            background: rgba(220, 53, 69, 0.05);
        }

        .item-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 15px;
            flex-wrap: wrap;
        }

        .item-name {
            font-size: 1.15em;
            font-weight: 600;
            color: var(--royal-blue);
            flex: 1;
        }

        .item-faculty {
            font-size: 0.95em;
            color: #666;
            margin-top: 5px;
            font-weight: 500;
        }

        .item-actions {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .action-btn {
            background: var(--success-green);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 8px 20px;
            font-size: 0.9em;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            min-width: 90px;
        }

        .action-btn:hover:not(:disabled) {
            background: var(--warm-gold);
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
        }

        .action-btn:disabled {
            background: var(--slate);
            cursor: not-allowed;
            opacity: 0.7;
        }

        .action-btn.full {
            background: var(--error-red);
        }

        .count-badge {
            background: var(--royal-blue);
            color: white;
            padding: 6px 14px;
            border-radius: 12px;
            font-size: 0.9em;
            font-weight: 700;
            min-width: 60px;
            text-align: center;
        }

        .count-badge.warning {
            background: var(--warning-orange);
        }

        .count-badge.full {
            background: var(--error-red);
        }

        /* No Subjects State */
        .no-subjects {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 60px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .no-subjects-icon {
            font-size: 5em;
            color: var(--royal-blue);
            margin-bottom: 20px;
        }

        .no-subjects h3 {
            color: var(--royal-blue);
            font-size: 2em;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .no-subjects p {
            color: #666;
            font-size: 1.1em;
            line-height: 1.6;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Responsive Design */
        @@media (max-width: 1024px) {
            .subjects-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <a href="@Url.Action("MainDashboard", "Student")" class="nav-link"><i class="fas fa-home"></i> Back to Dashboard</a>
    
    <!-- Real-time Connection Status -->
    <div class="connection-status disconnected" id="connectionStatus">
        <span class="status-dot connecting"></span> Connecting...
    </div>

    <div class="main-container">
        <div class="dashboard-header">
            <h2><i class="fas fa-chalkboard-teacher"></i> Select Faculty</h2>
            <div class="user-info">
                <strong>@Model.Student.FullName</strong> | 
                Year: <strong>@Model.Student.Year</strong> | 
                Department: <strong>@Model.Student.Department</strong>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            </div>
        }

        @* MAIN GRID LAYOUT - Core Subjects and Electives Side by Side *@
        <div class="subjects-grid">
            
            @* CORE SUBJECTS *@
            @foreach (var subjectGroup in Model.AvailableSubjectsGrouped)
            {
                <div class="subject-section">
                    <h3 class="section-title">@subjectGroup.Key</h3>
                    
                    <div class="items-list">
                        @foreach (var assignedSubject in subjectGroup)
                        {
                            var maxEnrollments = assignedSubject.Subject.MaxEnrollments ?? 70;
                            var isFull = assignedSubject.SelectedCount >= maxEnrollments;
                            var isWarning = assignedSubject.SelectedCount >= (maxEnrollments * 0.85);

                            <div class="item-card @(isFull ? "full" : "")" data-assigned-subject-id="@assignedSubject.AssignedSubjectId">
                                <div class="item-header">
                                    <div style="flex: 1;">
                                        <div class="item-name">@assignedSubject.Faculty.Name</div>
                                    </div>

                                    <div class="item-actions">
                                        <span class="count-badge @(isFull ? "full" : isWarning ? "warning" : "")" data-count="@assignedSubject.SelectedCount" data-max="@maxEnrollments">
                                            <span class="count-value">@assignedSubject.SelectedCount</span>/@maxEnrollments
                                        </span>

                                        <form asp-action="SelectSubject" method="post" style="display: inline;">
                                            <input type="hidden" name="assignedSubjectId" value="@assignedSubject.AssignedSubjectId" />
                                            <button type="submit" class="action-btn @(isFull ? "full" : "")" @(isFull ? "disabled" : "")>
                                                @(isFull ? "FULL" : "ENROLL")
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            @* PROFESSIONAL ELECTIVE-1 *@
            @if (Model.ProfessionalElective1Subjects != null && Model.ProfessionalElective1Subjects.Any())
            {
                <div class="subject-section">
                    <h3 class="section-title">Professional Elective-1</h3>
                    <p class="section-subtitle">Select <strong>ONE</strong> subject</p>

                    @if (Model.HasSelectedProfessionalElective1)
                    {
                        <div class="alert alert-info" style="margin-bottom: 20px;">
                            <i class="fas fa-check-circle"></i> Already selected
                        </div>
                    }

                    <div class="items-list">
                        @foreach (var assignedSubject in Model.ProfessionalElective1Subjects)
                        {
                            var maxEnrollments = assignedSubject.Subject.MaxEnrollments ?? 70;
                            var isFull = assignedSubject.SelectedCount >= maxEnrollments;
                            var isWarning = assignedSubject.SelectedCount >= (maxEnrollments * 0.85);

                            <div class="item-card @(isFull ? "full" : "")" data-assigned-subject-id="@assignedSubject.AssignedSubjectId">
                                <div class="item-header">
                                    <div style="flex: 1;">
                                        <div class="item-name">@assignedSubject.Subject.Name</div>
                                        <div class="item-faculty">@assignedSubject.Faculty.Name</div>
                                    </div>

                                    <div class="item-actions">
                                        <span class="count-badge @(isFull ? "full" : isWarning ? "warning" : "")" data-count="@assignedSubject.SelectedCount">
                                            <span class="count-value">@assignedSubject.SelectedCount</span>/@maxEnrollments
                                        </span>

                                        <form asp-action="SelectSubject" method="post" style="display: inline;">
                                            <input type="hidden" name="assignedSubjectId" value="@assignedSubject.AssignedSubjectId" />
                                            <button type="submit" class="action-btn @(isFull ? "full" : "")" @(isFull || Model.HasSelectedProfessionalElective1 ? "disabled" : "")>
                                                @if (isFull)
                                                {
                                                    <text>FULL</text>
                                                }
                                                else if (Model.HasSelectedProfessionalElective1)
                                                {
                                                    <text>LOCKED</text>
                                                }
                                                else
                                                {
                                                    <text>SELECT</text>
                                                }
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            @* PROFESSIONAL ELECTIVE-2 *@
            @if (Model.ProfessionalElective2Subjects != null && Model.ProfessionalElective2Subjects.Any())
            {
                <div class="subject-section">
                    <h3 class="section-title">Professional Elective-2</h3>
                    <p class="section-subtitle">Select <strong>ONE</strong> subject</p>

                    @if (Model.HasSelectedProfessionalElective2)
                    {
                        <div class="alert alert-info" style="margin-bottom: 20px;">
                            <i class="fas fa-check-circle"></i> Already selected
                        </div>
                    }

                    <div class="items-list">
                        @foreach (var assignedSubject in Model.ProfessionalElective2Subjects)
                        {
                            var maxEnrollments = assignedSubject.Subject.MaxEnrollments ?? 70;
                            var isFull = assignedSubject.SelectedCount >= maxEnrollments;
                            var isWarning = assignedSubject.SelectedCount >= (maxEnrollments * 0.85);

                            <div class="item-card @(isFull ? "full" : "")" data-assigned-subject-id="@assignedSubject.AssignedSubjectId">
                                <div class="item-header">
                                    <div style="flex: 1;">
                                        <div class="item-name">@assignedSubject.Subject.Name</div>
                                        <div class="item-faculty">@assignedSubject.Faculty.Name</div>
                                    </div>

                                    <div class="item-actions">
                                        <span class="count-badge @(isFull ? "full" : isWarning ? "warning" : "")" data-count="@assignedSubject.SelectedCount">
                                            <span class="count-value">@assignedSubject.SelectedCount</span>/@maxEnrollments
                                        </span>

                                        <form asp-action="SelectSubject" method="post" style="display: inline;">
                                            <input type="hidden" name="assignedSubjectId" value="@assignedSubject.AssignedSubjectId" />
                                            <button type="submit" class="action-btn @(isFull ? "full" : "")" @(isFull || Model.HasSelectedProfessionalElective2 ? "disabled" : "")>
                                                @if (isFull)
                                                {
                                                    <text>FULL</text>
                                                }
                                                else if (Model.HasSelectedProfessionalElective2)
                                                {
                                                    <text>LOCKED</text>
                                                }
                                                else
                                                {
                                                    <text>SELECT</text>
                                                }
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            @* PROFESSIONAL ELECTIVE-3 *@
            @if (Model.ProfessionalElective3Subjects != null && Model.ProfessionalElective3Subjects.Any())
            {
                <div class="subject-section">
                    <h3 class="section-title">Professional Elective-3</h3>
                    <p class="section-subtitle">Select <strong>ONE</strong> subject</p>

                    @if (Model.HasSelectedProfessionalElective3)
                    {
                        <div class="alert alert-info" style="margin-bottom: 20px;">
                            <i class="fas fa-check-circle"></i> Already selected
                        </div>
                    }

                    <div class="items-list">
                        @foreach (var assignedSubject in Model.ProfessionalElective3Subjects)
                        {
                            var maxEnrollments = assignedSubject.Subject.MaxEnrollments ?? 70;
                            var isFull = assignedSubject.SelectedCount >= maxEnrollments;
                            var isWarning = assignedSubject.SelectedCount >= (maxEnrollments * 0.85);

                            <div class="item-card @(isFull ? "full" : "")" data-assigned-subject-id="@assignedSubject.AssignedSubjectId">
                                <div class="item-header">
                                    <div style="flex: 1;">
                                        <div class="item-name">@assignedSubject.Subject.Name</div>
                                        <div class="item-faculty">@assignedSubject.Faculty.Name</div>
                                    </div>

                                    <div class="item-actions">
                                        <span class="count-badge @(isFull ? "full" : isWarning ? "warning" : "")" data-count="@assignedSubject.SelectedCount">
                                            <span class="count-value">@assignedSubject.SelectedCount</span>/@maxEnrollments
                                        </span>

                                        <form asp-action="SelectSubject" method="post" style="display: inline;">
                                            <input type="hidden" name="assignedSubjectId" value="@assignedSubject.AssignedSubjectId" />
                                            <button type="submit" class="action-btn @(isFull ? "full" : "")" @(isFull || Model.HasSelectedProfessionalElective3 ? "disabled" : "")>
                                                @if (isFull)
                                                {
                                                    <text>FULL</text>
                                                }
                                                else if (Model.HasSelectedProfessionalElective3)
                                                {
                                                    <text>LOCKED</text>
                                                }
                                                else
                                                {
                                                    <text>SELECT</text>
                                                }
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        @if (!Model.AvailableSubjectsGrouped.Any() && 
             !(Model.ProfessionalElective1Subjects?.Any() ?? false) && 
             !(Model.ProfessionalElective2Subjects?.Any() ?? false) && 
             !(Model.ProfessionalElective3Subjects?.Any() ?? false))
        {
            <div class="no-subjects">
                <div class="no-subjects-icon"><i class="fas fa-graduation-cap"></i></div>
                <h3>No Available Subjects</h3>
                <p>All subjects for your year are currently full, or you have already enrolled in all available subjects.</p>
                <p style="margin-top: 10px;">Please check back later or contact administration for assistance.</p>
            </div>
        }
    </div>

    <script>
        // SIGNALR REAL-TIME CONNECTION
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/selectionHub")
            .withAutomaticReconnect()
            .configureLogging(signalR.LogLevel.Information)
            .build();

        const statusElement = document.getElementById('connectionStatus');
        
        connection.start().then(function () {
            console.log('? SignalR Connected!');
            statusElement.innerHTML = '<span class="status-dot connected"></span> Live Updates Active';
            statusElement.className = 'connection-status connected';
            
            const studentYear = '@Model.Student.Year';
            const studentDept = '@Model.Student.Department';
            
            @foreach (var subjectGroup in Model.AvailableSubjectsGrouped)
            {
                <text>
                connection.invoke('JoinSubjectGroup', '@subjectGroup.Key', getYearNumber(studentYear), studentDept)
                    .then(() => console.log('? Joined subject group: @subjectGroup.Key'))
                    .catch(err => console.error('? Failed to join subject group @subjectGroup.Key:', err));
                </text>
            }
            
        }).catch(function (err) {
            console.error('? SignalR Connection Error:', err);
            statusElement.innerHTML = '<span class="status-dot disconnected"></span> Offline Mode';
            statusElement.className = 'connection-status disconnected';
        });

        connection.onreconnecting(() => {
            console.warn('?? SignalR reconnecting...');
            statusElement.innerHTML = '<span class="status-dot connecting"></span> Reconnecting...';
            statusElement.className = 'connection-status disconnected';
        });

        connection.onreconnected(() => {
            console.log('? SignalR reconnected!');
            statusElement.innerHTML = '<span class="status-dot connected"></span> Live Updates Active';
            statusElement.className = 'connection-status connected';
        });

        connection.onclose((error) => {
            console.error('? SignalR connection closed:', error);
            statusElement.innerHTML = '<span class="status-dot disconnected"></span> Connection Lost';
            statusElement.className = 'connection-status disconnected';
        });

        // REAL-TIME EVENT HANDLERS
        connection.on("SubjectSelectionUpdated", function (data) {
            console.log('?? Selection Update Received:', data);
            
            const assignedSubjectId = data.assignedSubjectId || data.AssignedSubjectId;
            const newCount = data.newCount || data.NewCount;
            const isFull = data.isFull || data.IsFull;
            
            updateItem(assignedSubjectId, newCount, isFull);
        });

        connection.on("SubjectUnenrollmentUpdated", function (data) {
            console.log('?? Unenrollment Update Received:', data);
            
            const assignedSubjectId = data.assignedSubjectId || data.AssignedSubjectId;
            const newCount = data.newCount || data.NewCount;
            
            updateItem(assignedSubjectId, newCount, false);
        });

        // UPDATE ITEM
        function updateItem(assignedSubjectId, newCount, isFull) {
            console.log(`?? Updating item: ID=${assignedSubjectId}, Count=${newCount}, Full=${isFull}`);
            
            const item = document.querySelector(`[data-assigned-subject-id="${assignedSubjectId}"]`);
            if (!item) {
                console.warn(`?? Item not found for ID: ${assignedSubjectId}`);
                return;
            }

            const countBadge = item.querySelector('.count-badge');
            const countValue = item.querySelector('.count-value');
            const btn = item.querySelector('.action-btn');

            // Update count with animation
            if (countValue && countBadge) {
                countValue.textContent = newCount;
                
                // Get max enrollments from the badge's data attribute
                const maxEnrollments = parseInt(countBadge.getAttribute('data-max')) || 70;
                
                // Update badge styling based on count relative to max
                countBadge.classList.remove('full', 'warning');
                if (isFull || newCount >= maxEnrollments) {
                    countBadge.classList.add('full');
                } else if (newCount >= (maxEnrollments * 0.85)) {
                    countBadge.classList.add('warning');
                }
                
                // Add pulse animation
                countBadge.style.transform = 'scale(1.3)';
                countBadge.style.transition = 'transform 0.3s ease';
                setTimeout(() => {
                    countBadge.style.transform = 'scale(1)';
                }, 300);
            }

            // Update button
            if (btn) {
                if (isFull) {
                    btn.disabled = true;
                    btn.classList.add('full');
                    btn.textContent = 'FULL';
                } else {
                    btn.disabled = false;
                    btn.classList.remove('full');
                    const isElective = btn.closest('.subject-section').querySelector('.section-subtitle');
                    btn.textContent = isElective ? 'SELECT' : 'ENROLL';
                }
            }

            // Update item styling
            if (isFull) {
                item.classList.add('full');
            } else {
                item.classList.remove('full');
            }
        }

        function getYearNumber(yearString) {
            const yearMap = { "I Year": 1, "II Year": 2, "III Year": 3, "IV Year": 4 };
            return yearMap[yearString] || 1;
        }

        window.addEventListener('beforeunload', function() {
            if (connection.state === signalR.HubConnectionState.Connected) {
                connection.stop();
            }
        });
    </script>
