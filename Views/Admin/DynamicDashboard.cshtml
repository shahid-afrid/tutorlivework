@model TutorLiveMentor.Models.DepartmentDashboardViewModel
@{
    ViewData["Title"] = $"{Model.DepartmentName} Department Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --dept-purple: #6f42c1;
            --dept-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1600px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
        }

        .dashboard-header h1 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0 0 10px 0;
            letter-spacing: 1.2px;
        }

        .dashboard-header p {
            color: #666;
            font-size: 1.2em;
            margin: 0;
        }

        .welcome-section {
            background: linear-gradient(135deg, var(--dept-purple), var(--dept-teal));
            color: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .welcome-section h4 {
            font-weight: 700;
            margin-bottom: 10px;
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(249,250,242,0.95);
            border-radius: 15px;
            padding: 25px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, var(--dept-purple), var(--dept-teal));
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(111, 66, 193, 0.3);
        }

        .stat-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .stat-info h6 {
            color: var(--royal-blue);
            font-weight: 600;
            margin-bottom: 5px;
            font-size: 0.9em;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stat-count {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--dept-purple);
            margin: 0;
        }

        .stat-icon {
            font-size: 3em;
            color: var(--dept-teal);
            opacity: 0.8;
        }

        /* Management Cards */
        .management-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }

        .management-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .management-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
        }

        .management-card.faculty-card::before {
            background: linear-gradient(135deg, #28a745, #20c997);
        }

        .management-card.subject-card::before {
            background: linear-gradient(135deg, #ffc107, #fd7e14);
        }

        .management-card.students-card::before {
            background: linear-gradient(135deg, #9b59b6, #8e44ad);
        }

        .management-card.assignment-card::before {
            background: linear-gradient(135deg, #6f42c1, #20c997);
        }

        .management-card.report-card::before {
            background: linear-gradient(135deg, #17a2b8, #6f42c1);
        }

        .management-card.schedule-card::before {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
        }

        .faculty-card .management-icon { color: #28a745; }
        .subject-card .management-icon { color: #ffc107; }
        .students-card .management-icon { color: #9b59b6; }
        .assignment-card .management-icon { color: #6f42c1; }
        .report-card .management-icon { color: #17a2b8; }
        .schedule-card .management-icon { color: #e74c3c; }

        .management-icon {
            font-size: 3em;
            margin-bottom: 15px;
        }

        .management-title {
            font-size: 1.4em;
            font-weight: 700;
            color: var(--royal-blue);
            margin-bottom: 10px;
        }

        .management-desc {
            color: #666;
            font-size: 1em;
            margin-bottom: 20px;
            line-height: 1.5;
        }

        .glass-btn {
            background: linear-gradient(135deg, var(--dept-purple) 0%, var(--dept-teal) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 25px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 6px 20px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .glass-btn:hover {
            background: linear-gradient(135deg, var(--dept-teal) 0%, var(--dept-purple) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(111, 66, 193, 0.4);
            text-decoration: none;
            color: white;
        }

        /* Overview Section */
        .overview-section {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            margin-bottom: 30px;
        }

        .overview-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .overview-title {
            color: var(--royal-blue);
            font-weight: 700;
            font-size: 1.5em;
            margin: 0;
        }

        .overview-table {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .overview-table thead {
            background: linear-gradient(135deg, var(--dept-purple), var(--dept-teal));
            color: white;
        }

        .overview-table thead th {
            padding: 15px;
            font-weight: 600;
            text-align: left;
            border: none;
        }

        .overview-table tbody td {
            padding: 12px 15px;
            vertical-align: middle;
            border-bottom: 1px solid #f0f0f0;
        }

        .overview-table tbody tr:hover {
            background: #f8f9fa;
        }

        .faculty-assignments {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
        }

        .assignment-badge {
            background: linear-gradient(135deg, var(--dept-purple), var(--dept-teal));
            color: white;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 0.85em;
            font-weight: 500;
        }

        .status-badge {
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8em;
            font-weight: 600;
        }

        .status-active { background: #d4edda; color: #155724; }
        .status-inactive { background: #f8d7da; color: #721c24; }

        .logout-controls {
            position: fixed;
            bottom: 20px;
            right: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
            z-index: 100;
        }

        .logout-btn {
            background: rgba(220, 53, 69, 0.9);
            color: white;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-weight: 600;
            text-decoration: none;
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .logout-btn:hover {
            background: rgba(220, 53, 69, 1);
            transform: translateY(-2px);
            text-decoration: none;
            color: white;
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: #666;
        }

        .empty-state i {
            font-size: 3em;
            color: var(--dept-purple);
            margin-bottom: 15px;
        }

        .empty-state h3 {
            font-size: 1.5em;
            color: var(--royal-blue);
            margin-bottom: 10px;
        }

        .app-footer {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--slate);
            box-shadow: 0 -8px 32px rgba(39,64,96,0.13);
            padding: 30px 20px;
            margin-top: 50px;
            text-align: center;
            font-family: 'Montserrat', Arial, sans-serif;
            color: #274060;
            border-radius: 20px 20px 0 0;
        }

        .footer-line {
            margin: 8px 0;
            line-height: 1.6;
        }

        .footer-line.guidance { font-size: 1em; font-weight: 600; color: #444; margin-bottom: 12px; }
        .footer-line.team { font-size: 0.95em; font-weight: 500; color: #444; }
        .footer-line.copyright { font-size: 0.9em; font-weight: 600; color: #274060; margin-top: 15px; padding-top: 15px; border-top: 2px solid rgba(39,64,96,0.1); }
        .footer-highlight { color: #274060; font-weight: 700; }
        .footer-name { color: #274060; font-weight: 600; }

        @@media (max-width: 768px) {
            .dashboard-header h1 { font-size: 2em; }
            .stats-container, .management-container { grid-template-columns: 1fr; }
            .logout-controls { position: static; margin-top: 30px; flex-direction: row; justify-content: center; }
            .overview-header { flex-direction: column; gap: 15px; }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header Section -->
        <div class="dashboard-header">
            <h1><i class="fas fa-chart-line"></i> @Model.DepartmentName Department Dashboard</h1>
        </div>

        <!-- Welcome Section -->
        <div class="welcome-section">
            <h4><i class="fas fa-user-shield"></i> Welcome, @Model.DepartmentName Department Administrator!</h4>
            <p class="mb-0">
                <strong>Department Code:</strong> @Model.DepartmentCode | 
                <strong>Department:</strong> @Model.DepartmentName
            </p>
        </div>

        <!-- Statistics Cards -->
        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>@Model.DepartmentName Students</h6>
                        <h3 class="stat-count" id="studentsCount">@Model.TotalStudents</h3>
                    </div>
                    <i class="fas fa-graduation-cap stat-icon"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>@Model.DepartmentName Faculty</h6>
                        <h3 class="stat-count" id="facultyCount">@Model.TotalFaculty</h3>
                    </div>
                    <i class="fas fa-chalkboard-teacher stat-icon"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>@Model.DepartmentName Subjects</h6>
                        <h3 class="stat-count" id="subjectsCount">@Model.TotalSubjects</h3>
                    </div>
                    <i class="fas fa-book stat-icon"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>Active Enrollments</h6>
                        <h3 class="stat-count" id="enrollmentsCount">@Model.TotalEnrollments</h3>
                    </div>
                    <i class="fas fa-user-check stat-icon"></i>
                </div>
            </div>
        </div>

        <!-- Management Actions -->
        <div class="management-container">
            <!-- Faculty Management -->
            <div class="management-card faculty-card" onclick="window.location.href='@Url.Action("ManageDynamicFaculty", "Admin", new { department = Model.DepartmentCode })'">
                <i class="fas fa-chalkboard-teacher management-icon"></i>
                <div class="management-title">Faculty Management</div>
                <div class="management-desc">Add, edit, and delete @Model.DepartmentName faculty members. View all faculty with their assigned subjects and manage their information.</div>
                <button class="glass-btn">
                    <i class="fas fa-users"></i> Manage Faculty
                </button>
            </div>

            <!-- Subject Management -->
            <div class="management-card subject-card" onclick="window.location.href='@Url.Action("ManageDynamicSubjects", "Admin", new { department = Model.DepartmentCode })'">
                <i class="fas fa-book management-icon"></i>
                <div class="management-title">Subject Management</div>
                <div class="management-desc">Create new @Model.DepartmentName subjects with semester details. Set year, semester, and date ranges for academic planning.</div>
                <button class="glass-btn">
                    <i class="fas fa-plus"></i> Manage Subjects
                </button>
            </div>

            <!-- Student Management -->
            <div class="management-card students-card" onclick="window.location.href='@Url.Action("ManageDynamicStudents", "Admin", new { department = Model.DepartmentCode })'">
                <i class="fas fa-user-graduate management-icon"></i>
                <div class="management-title">Student Management</div>
                <div class="management-desc">View and manage @Model.DepartmentName student profiles and enrollments. Add new students and update their information.</div>
                <button class="glass-btn">
                    <i class="fas fa-graduation-cap"></i> Manage Students
                </button>
            </div>

            <!-- Faculty-Subject Assignments -->
            <div class="management-card assignment-card" onclick="window.location.href='@Url.Action("ManageDynamicAssignments", "Admin", new { department = Model.DepartmentCode })'">
                <i class="fas fa-link management-icon"></i>
                <div class="management-title">Faculty-Subject Assignments</div>
                <div class="management-desc">Assign faculty to subjects, manage existing assignments, and view all subject-faculty mappings in the department.</div>
                <button class="glass-btn">
                    <i class="fas fa-link"></i> Manage Assignments
                </button>
            </div>

            <!-- Reports & Analytics -->
            <div class="management-card report-card" onclick="window.location.href='@Url.Action("DynamicReports", "Admin", new { department = Model.DepartmentCode })'">
                <i class="fas fa-chart-bar management-icon"></i>
                <div class="management-title">Reports & Analytics</div>
                <div class="management-desc">Generate detailed analytics reports with filters. Export enrollment data in Excel and PDF formats for analysis.</div>
                <button class="glass-btn">
                    <i class="fas fa-download"></i> View Reports
                </button>
            </div>

            <!-- Faculty Selection Schedule -->
            <div class="management-card schedule-card" onclick="window.location.href='@Url.Action("ManageDynamicSchedule", "Admin", new { department = Model.DepartmentCode })'">
                <i class="fas fa-clock management-icon"></i>
                <div class="management-title">Faculty Selection Schedule</div>
                <div class="management-desc">Control when students can select faculty. Toggle selection on/off or set specific time periods for faculty selection windows.</div>
                <button class="glass-btn">
                    <i class="fas fa-calendar-alt"></i> Manage Schedule
                </button>
            </div>
        </div>

        <!-- Subject-Faculty Mappings Overview (NEW - matching CSEDS) -->
        @if(Model.SubjectFacultyMappings != null && Model.SubjectFacultyMappings.Any())
        {
            <div class="overview-section">
                <div class="overview-header">
                    <h3 class="overview-title">
                        <i class="fas fa-link"></i> Subject-Faculty Assignments (@Model.SubjectFacultyMappings.Count)
                    </h3>
                    <a href="@Url.Action("ManageDynamicAssignments", "Admin", new { department = Model.DepartmentCode })" class="glass-btn">
                        <i class="fas fa-cog"></i> Manage All
                    </a>
                </div>
                
                <div class="table-responsive">
                    <table class="table overview-table" id="assignmentsOverviewTable">
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Year/Semester</th>
                                <th>Assigned Faculty</th>
                                <th>Enrollments</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mapping in Model.SubjectFacultyMappings.Take(5))
                            {
                                <tr>
                                    <td data-label="Subject"><strong>@mapping.SubjectName</strong></td>
                                    <td data-label="Year/Semester">Year @mapping.Year, @mapping.Semester</td>
                                    <td data-label="Assigned Faculty">
                                        @if (mapping.AssignedFaculty.Any())
                                        {
                                            <div class="faculty-assignments">
                                                @foreach (var faculty in mapping.AssignedFaculty)
                                                {
                                                    <span class="assignment-badge">@faculty.Name</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No faculty assigned</span>
                                        }
                                    </td>
                                    <td data-label="Enrollments">
                                        <span class="badge bg-info">@mapping.EnrollmentCount students</span>
                                    </td>
                                    <td data-label="Status">
                                        @{
                                            bool isActive = !mapping.SemesterEndDate.HasValue || mapping.SemesterEndDate >= DateTime.Now;
                                        }
                                        <span class="status-badge @(isActive ? "status-active" : "status-inactive")">
                                            @(isActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                @if(Model.SubjectFacultyMappings.Count > 5)
                {
                    <div class="text-center mt-3">
                        <a href="@Url.Action("ManageDynamicAssignments", "Admin", new { department = Model.DepartmentCode })" class="glass-btn">
                            <i class="fas fa-eye"></i> View All @Model.SubjectFacultyMappings.Count Assignments
                        </a>
                    </div>
                }
            </div>
        }

        <!-- Recent Faculty Overview -->
        @if(Model.RecentFaculty != null && Model.RecentFaculty.Any())
        {
            <div class="overview-section">
                <div class="overview-header">
                    <h3 class="overview-title"><i class="fas fa-chalkboard-teacher"></i> Recent Faculty (@Model.TotalFaculty Total)</h3>
                </div>
                <div class="table-responsive">
                    <table class="table overview-table" id="facultyOverviewTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var faculty in Model.RecentFaculty.Take(5))
                            {
                                <tr>
                                    <td data-label="Name"><strong>@faculty.Name</strong></td>
                                    <td data-label="Email">@faculty.Email</td>
                                    <td data-label="Department">@faculty.Department</td>
                                    <td data-label="Status"><span class="status-badge status-active">Active</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="overview-section">
                <div class="empty-state">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <h3>No Faculty Yet</h3>
                    <p>Start by adding faculty members to this department.</p>
                </div>
            </div>
        }

        <!-- Recent Students Overview -->
        @if(Model.RecentStudents != null && Model.RecentStudents.Any())
        {
            <div class="overview-section">
                <div class="overview-header">
                    <h3 class="overview-title"><i class="fas fa-user-graduate"></i> Recent Students (@Model.TotalStudents Total)</h3>
                </div>
                <div class="table-responsive">
                    <table class="table overview-table" id="studentsOverviewTable">
                        <thead>
                            <tr>
                                <th>Regd Number</th>
                                <th>Name</th>
                                <th>Year</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model.RecentStudents.Take(5))
                            {
                                <tr>
                                    <td data-label="Regd Number"><strong>@student.RegdNumber</strong></td>
                                    <td data-label="Name">@student.FullName</td>
                                    <td data-label="Year">@student.Year</td>
                                    <td data-label="Status"><span class="status-badge status-active">Active</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="overview-section">
                <div class="empty-state">
                    <i class="fas fa-user-graduate"></i>
                    <h3>No Students Yet</h3>
                    <p>Start by adding students to this department.</p>
                </div>
            </div>
        }

        <!-- Student Distribution by Year -->
        @if(Model.StudentsByYear != null && Model.StudentsByYear.Any())
        {
            <div class="overview-section">
                <div class="overview-header">
                    <h3 class="overview-title"><i class="fas fa-chart-pie"></i> Student Distribution by Year</h3>
                </div>
                <div class="row">
                    @foreach (var yearStat in Model.StudentsByYear.OrderBy(y => y.Year))
                    {
                        <div class="col-md-3 mb-3">
                            <div class="stat-card">
                                <div class="stat-content">
                                    <div class="stat-info">
                                        <h6>Year @yearStat.Year</h6>
                                        <h3 class="stat-count">@yearStat.Count</h3>
                                    </div>
                                    <i class="fas fa-users stat-icon"></i>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Logout Controls (matching CSEDS exactly) -->
    <div class="logout-controls">
        <a href="@Url.Action("Profile", "Admin")" class="logout-btn">
            <i class="fas fa-user"></i> Profile
        </a>
        <a href="@Url.Action("Logout", "Admin")" class="logout-btn">
