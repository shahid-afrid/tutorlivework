@model List<TutorLiveMentor.Models.Subject>
@{
    ViewData["Title"] = "Manage CSEDS Subjects";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage CSEDS Subjects - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --cseds-purple: #6f42c1;
            --cseds-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .page-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
        }

        .page-header h1 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0 0 10px 0;
            letter-spacing: 1.2px;
        }

        .action-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            background: rgba(249,250,242,0.92);
            padding: 20px 30px;
            border-radius: 15px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
        }

        .glass-btn {
            background: linear-gradient(135deg, var(--cseds-purple) 0%, var(--cseds-teal) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 25px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 6px 20px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .glass-btn:hover {
            background: linear-gradient(135deg, var(--cseds-teal) 0%, var(--cseds-purple) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(111, 66, 193, 0.4);
            text-decoration: none;
            color: white;
        }

        .subjects-table {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            overflow-x: auto;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }

        .table th {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 15px;
            text-align: left;
            font-weight: 600;
            border: none;
        }

        .table td {
            padding: 15px;
            border-bottom: 1px solid var(--slate);
            vertical-align: middle;
        }

        .table tr:hover {
            background: rgba(111, 66, 193, 0.05);
        }

        .badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.85em;
            font-weight: 600;
            text-align: center;
        }

        .badge-year {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
        }

        .badge-semester {
            background: linear-gradient(135deg, var(--warm-gold), #fd7e14);
            color: white;
        }

        .badge-core {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
        }

        .badge-elective {
            background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
            color: white;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        .btn-sm {
            padding: 8px 15px;
            font-size: 0.85em;
            border-radius: 20px;
        }

        .btn-edit {
            background: linear-gradient(135deg, #28a745, #20c997);
        }

        .btn-delete {
            background: linear-gradient(135deg, #dc3545, #fd7e14);
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
            backdrop-filter: blur(4px);
        }

        .modal-content {
            background: rgba(249,250,242,0.98);
            margin: 3% auto;
            padding: 30px;
            border-radius: 20px;
            width: 90%;
            max-width: 700px;
            max-height: 85vh;
            overflow-y: auto;
            box-shadow: 0 15px 50px rgba(0,0,0,0.3);
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid var(--slate);
        }

        .modal-title {
            font-size: 1.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0;
        }

        .close {
            font-size: 28px;
            font-weight: bold;
            color: #aaa;
            cursor: pointer;
            transition: color 0.3s;
        }

        .close:hover { color: #000; }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-weight: 600;
            font-size: 0.9em;
            color: var(--royal-blue);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .form-label-small {
            font-size: 0.75em;
            font-weight: 400;
            color: #666;
            text-transform: none;
            letter-spacing: 0;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 2px solid var(--slate);
            border-radius: 8px;
            font-size: 1em;
            background: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
            box-sizing: border-box;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--cseds-purple);
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.1);
        }

        .form-control:disabled {
            background: #e9ecef;
            cursor: not-allowed;
        }

        .help-text {
            font-size: 0.85em;
            color: #666;
            margin-top: 5px;
            font-style: italic;
        }

        .highlight-box {
            background: rgba(111, 66, 193, 0.1);
            border-left: 4px solid var(--cseds-purple);
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .btn-group {
            display: flex;
            gap: 15px;
            justify-content: flex-end;
            margin-top: 25px;
        }

        .btn-secondary {
            background: linear-gradient(135deg, var(--slate) 0%, #95a5a6 100%);
        }

        .btn-secondary:hover {
            background: linear-gradient(135deg, #95a5a6 0%, var(--slate) 100%);
        }

        .back-btn {
            background: linear-gradient(135deg, var(--slate) 0%, #95a5a6 100%);
        }

        .back-btn:hover {
            background: linear-gradient(135deg, #95a5a6 0%, var(--slate) 100%);
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .empty-state i {
            font-size: 4em;
            color: var(--cseds-purple);
            margin-bottom: 20px;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
            }

            .action-bar {
                flex-direction: column;
                gap: 15px;
            }

            .subjects-table {
                padding: 20px;
            }

            .table th, .table td {
                padding: 10px 8px;
                font-size: 0.9em;
            }

            .action-buttons {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header Section -->
        <div class="page-header">
            <h1><i class="fas fa-database"></i> Manage CSEDS Subjects</h1>
            <p>Add, edit, and manage Data Science subjects with semester details and Professional Electives</p>
        </div>

        <!-- Action Bar -->
        <div class="action-bar">
            <div>
                <h4 style="margin: 0; color: var(--royal-blue);">
                    <i class="fas fa-list"></i> Total Subjects: @Model.Count
                </h4>
            </div>
            <div style="display: flex; gap: 15px;">
                <button class="glass-btn" onclick="openAddSubjectModal()">
                    <i class="fas fa-plus"></i> Add New Subject
                </button>
                <a href="@Url.Action("CSEDSDashboard", "Admin")" class="glass-btn back-btn">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Subjects Table -->
        <div class="subjects-table">
            @if (Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Subject Name</th>
                            <th>Type</th>
                            <th>Year</th>
                            <th>Semester</th>
                            <th>Max Limit</th>
                            <th>Semester Period</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subject in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@subject.Name</strong>
                                </td>
                                <td>
                                    @if (subject.SubjectType == "Core")
                                    {
                                        <span class="badge badge-core">Core</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-elective">@subject.SubjectType</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge badge-year">Year @subject.Year</span>
                                </td>
                                <td>
                                    <span class="badge badge-semester">Semester @subject.Semester</span>
                                </td>
                                <td>
                                    @if (subject.MaxEnrollments.HasValue)
                                    {
                                        <strong>@subject.MaxEnrollments</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Unlimited</span>
                                    }
                                </td>
                                <td>
                                    @if (subject.SemesterStartDate.HasValue && subject.SemesterEndDate.HasValue)
                                    {
                                        <small>
                                            @subject.SemesterStartDate.Value.ToString("MMM dd, yyyy") - 
                                            @subject.SemesterEndDate.Value.ToString("MMM dd, yyyy")
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">No dates set</small>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="glass-btn btn-sm btn-edit" onclick="editSubject(@subject.SubjectId, '@Html.Raw(subject.Name.Replace("'", "\\'"))', @subject.Year, '@subject.Semester', '@subject.SemesterStartDate?.ToString("yyyy-MM-dd")', '@subject.SemesterEndDate?.ToString("yyyy-MM-dd")', '@subject.SubjectType', @(subject.MaxEnrollments?.ToString() ?? "null"))">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>
                                        <button class="glass-btn btn-sm btn-delete" onclick="deleteSubject(@subject.SubjectId, '@Html.Raw(subject.Name.Replace("'", "\\'"))')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-database"></i>
                    <h3>No Subjects Found</h3>
                    <p>Start by adding your first CSEDS subject using the "Add New Subject" button above.</p>
                </div>
            }
        </div>
    </div>

    <!-- Add/Edit Subject Modal -->
    <div id="subjectModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="modalTitle">Add New Subject</h2>
                <span class="close" onclick="closeSubjectModal()">&times;</span>
            </div>
            <form id="subjectForm">
                <input type="hidden" id="subjectId" value="0">
                
                <div class="form-group">
                    <label class="form-label">Subject Name</label>
                    <input type="text" id="subjectName" class="form-control" required>
                </div>
                
                <!-- UPDATED: Subject Type Field -->
                <div class="form-group">
                    <label class="form-label">Subject Type <span class="form-label-small">(Core or Professional Elective)</span></label>
                    <select id="subjectType" class="form-control" required onchange="updateMaxEnrollmentsVisibility()">
                        <option value="Core">Core Subject</option>
                        <option value="ProfessionalElective1">Professional Elective-1</option>
                        <option value="ProfessionalElective2">Professional Elective-2</option>
                        <option value="ProfessionalElective3">Professional Elective-3</option>
                    </select>
                    <div class="help-text">Core subjects are mandatory, Professional Electives allow students to choose ONE from a group</div>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                    <div class="form-group">
                        <label class="form-label">Year</label>
                        <select id="subjectYear" class="form-control" required onchange="updateMaxEnrollmentsDefault()">
                            <option value="">Select Year</option>
                            <option value="1">1st Year</option>
                            <option value="2">2nd Year</option>
                            <option value="3">3rd Year</option>
                            <option value="4">4th Year</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Semester</label>
                        <select id="subjectSemester" class="form-control" required>
                            <option value="">Select Semester</option>
                            <option value="I">I (1)</option>
                            <option value="II">II (2)</option>
                        </select>
                    </div>
                </div>

                <!-- UPDATED: Max Enrollments Field - Now visible for all subject types -->
                <div class="form-group" id="maxEnrollmentsGroup">
                    <label class="form-label">
                        Maximum Enrollments 
                        <span class="form-label-small" id="maxEnrollmentHint">(Auto-set based on year for Core subjects)</span>
                    </label>
                    <input type="number" id="maxEnrollments" class="form-control" min="1" max="200" placeholder="Enter enrollment limit">
                    <div class="help-text" id="maxEnrollmentHelp">
                        <strong>Recommended:</strong> Year 2 = 60 students, Year 3/4 = 70 students. You can override this default.
                    </div>
                </div>

                <div class="highlight-box" id="electiveWarning" style="display: none;">
                    <strong><i class="fas fa-info-circle"></i> Professional Elective Info:</strong><br>
                    Students can select ONLY ONE subject from all subjects marked as the same Professional Elective type. Make sure to set an appropriate enrollment limit.
                </div>

                <div class="highlight-box" id="coreWarning" style="display: block; background: rgba(32, 201, 151, 0.1); border-left-color: #20c997;">
                    <strong><i class="fas fa-info-circle"></i> Core Subject Info:</strong><br>
                    Enrollment limit is automatically suggested based on year (Year 2 = 60, Year 3/4 = 70). You can customize this if needed.
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                    <div class="form-group">
                        <label class="form-label">Semester Start Date</label>
                        <input type="date" id="semesterStart" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Semester End Date</label>
                        <input type="date" id="semesterEnd" class="form-control" required>
                    </div>
                </div>
                <div class="btn-group">
                    <button type="button" class="glass-btn btn-secondary" onclick="closeSubjectModal()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                    <button type="submit" class="glass-btn" id="submitBtn">
                        <i class="fas fa-save"></i> Add Subject
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        let isEditMode = false;

        // Update max enrollments visibility and defaults based on subject type and year
        function updateMaxEnrollmentsVisibility() {
            const subjectType = document.getElementById('subjectType').value;
            const electiveWarning = document.getElementById('electiveWarning');
            const coreWarning = document.getElementById('coreWarning');
            const maxEnrollmentHint = document.getElementById('maxEnrollmentHint');
            const maxEnrollmentHelp = document.getElementById('maxEnrollmentHelp');
            
            if (subjectType.startsWith('ProfessionalElective')) {
                // Professional Elective mode
                electiveWarning.style.display = 'block';
                coreWarning.style.display = 'none';
                maxEnrollmentHint.textContent = '(Typically 60-70 students)';
                maxEnrollmentHelp.innerHTML = '<strong>Recommended:</strong> Set between 60-70 students for Professional Electives.';
                
                // Set default if empty
                const maxEnrollments = document.getElementById('maxEnrollments');
                if (!maxEnrollments.value) {
                    maxEnrollments.value = '70';
                }
            } else {
                // Core Subject mode
                electiveWarning.style.display = 'none';
                coreWarning.style.display = 'block';
                maxEnrollmentHint.textContent = '(Auto-set based on year)';
                maxEnrollmentHelp.innerHTML = '<strong>Recommended:</strong> Year 2 = 60 students, Year 3/4 = 70 students. You can override this default.';
                
                // Update default based on year
                updateMaxEnrollmentsDefault();
            }
        }

        // Update max enrollments default when year changes (for Core subjects)
        function updateMaxEnrollmentsDefault() {
            const subjectType = document.getElementById('subjectType').value;
            const year = parseInt(document.getElementById('subjectYear').value);
            const maxEnrollments = document.getElementById('maxEnrollments');
            
            // Only auto-update for Core subjects if field is empty or editing
            if (subjectType === 'Core' && year) {
                // Set default based on year
                if (year === 2) {
                    if (!maxEnrollments.value || !isEditMode) {
                        maxEnrollments.value = '60';
                    }
                } else if (year >= 3) {
                    if (!maxEnrollments.value || !isEditMode) {
                        maxEnrollments.value = '70';
                    }
                }
            }
        }

        // Modal Functions
        function openAddSubjectModal() {
            isEditMode = false;
            document.getElementById('modalTitle').textContent = 'Add New Subject';
            document.getElementById('submitBtn').innerHTML = '<i class="fas fa-save"></i> Add Subject';
            document.getElementById('subjectForm').reset();
            document.getElementById('subjectId').value = '0';
            document.getElementById('subjectType').value = 'Core';
            updateMaxEnrollmentsVisibility();
            document.getElementById('subjectModal').style.display = 'block';
        }

        function editSubject(id, name, year, semester, startDate, endDate, subjectType, maxEnrollments) {
            isEditMode = true;
            document.getElementById('modalTitle').textContent = 'Edit Subject';
            document.getElementById('submitBtn').innerHTML = '<i class="fas fa-save"></i> Update Subject';
            
            document.getElementById('subjectId').value = id;
            document.getElementById('subjectName').value = name;
            document.getElementById('subjectYear').value = year;
            document.getElementById('subjectSemester').value = semester;
            document.getElementById('semesterStart').value = startDate || '';
            document.getElementById('semesterEnd').value = endDate || '';
            document.getElementById('subjectType').value = subjectType || 'Core';
            document.getElementById('maxEnrollments').value = maxEnrollments || '';
            
            updateMaxEnrollmentsVisibility();
            document.getElementById('subjectModal').style.display = 'block';
        }

        function closeSubjectModal() {
            document.getElementById('subjectModal').style.display = 'none';
            document.getElementById('subjectForm').reset();
            isEditMode = false;
        }

        async function deleteSubject(id, name) {
            if (!confirm(`Are you sure you want to delete "${name}"? This action cannot be undone.`)) {
                return;
            }

            try {
                const response = await fetch('@Url.Action("DeleteCSEDSSubject", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ subjectId: id })
                });

                const result = await response.json();
                
                if (result.success) {
                    alert('Subject deleted successfully!');
                    location.reload();
                } else {
                    alert('Error deleting subject: ' + (result.message || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error deleting subject. Please try again.');
            }
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('subjectModal');
            if (event.target === modal) {
                closeSubjectModal();
            }
        }

        // Form submission
        document.getElementById('subjectForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const startDate = new Date(document.getElementById('semesterStart').value);
            const endDate = new Date(document.getElementById('semesterEnd').value);
            
            if (endDate <= startDate) {
                alert('Semester end date must be after start date.');
                return;
            }

            const maxEnrollmentsValue = document.getElementById('maxEnrollments').value;
            if (!maxEnrollmentsValue) {
                alert('Please enter a maximum enrollment limit.');
                return;
            }

            const formData = {
                SubjectId: parseInt(document.getElementById('subjectId').value),
                Name: document.getElementById('subjectName').value,
                Department: 'CSE(DS)',
                Year: parseInt(document.getElementById('subjectYear').value),
                Semester: document.getElementById('subjectSemester').value,
                SemesterStartDate: document.getElementById('semesterStart').value,
                SemesterEndDate: document.getElementById('semesterEnd').value,
                SubjectType: document.getElementById('subjectType').value,
                MaxEnrollments: parseInt(maxEnrollmentsValue)
            };

            const endpoint = isEditMode ? 
                '@Url.Action("UpdateCSEDSSubject", "Admin")' : 
                '@Url.Action("AddCSEDSSubject", "Admin")';

            try {
                const response = await fetch(endpoint, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();
                
                if (result.success) {
                    alert(isEditMode ? 'Subject updated successfully!' : 'Subject added successfully!');
                    closeSubjectModal();
                    location.reload();
                } else {
                    alert('Error: ' + (result.message || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error saving subject. Please try again.');
            }
        });

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            console.log('CSEDS Subject Management loaded successfully');
            updateMaxEnrollmentsVisibility(); // Initialize on page load
        });
    </script>
</body>
</html>