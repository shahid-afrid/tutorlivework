@model TutorLiveMentor.Models.AdminProfileViewModel
@{
    ViewData["Title"] = "CSEDS Admin Profile";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CSEDS Admin Profile - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --cseds-purple: #6f42c1;
            --cseds-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)), url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

            body::before {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                z-index: 0;
                display: block;
                background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
                opacity: 0.20;
                pointer-events: none;
            }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Modal Overlay Styling - Enhanced */
        .modal {
            display: none !important;
            position: fixed !important;
            top: 0 !important;
            left: 0 !important;
            width: 100vw !important;
            height: 100vh !important;
            z-index: 9999 !important;
            overflow: hidden !important;
        }

            .modal.show {
                display: flex !important;
                align-items: center !important;
                justify-content: center !important;
                background-color: rgba(39, 64, 96, 0.75) !important;
                backdrop-filter: blur(4px) !important;
                animation: fadeIn 0.2s ease-out;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .modal-backdrop {
            display: none !important;
        }

        .modal-dialog {
            position: relative !important;
            z-index: 10000 !important;
            margin: 20px !important;
            max-width: 600px !important;
            width: 100% !important;
            max-height: 90vh !important;
            animation: slideDown 0.3s ease-out;
        }

        @@keyframes slideDown {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .modal-content {
            border-radius: 24px !important;
            border: none !important;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3), 0 0 0 1px rgba(255, 255, 255, 0.1) !important;
            background: white !important;
            overflow: hidden !important;
        }

        .modal-header {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal)) !important;
            color: white !important;
            border-radius: 0 !important;
            padding: 25px 40px !important;
            border-bottom: none !important;
            position: relative !important;
        }

            .modal-header::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 3px;
                background: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.3) 50%, rgba(255,255,255,0) 100%);
            }

            .modal-header h5 {
                margin: 0 !important;
                font-weight: 700 !important;
                font-size: 1.5rem !important;
                display: flex !important;
                align-items: center !important;
                gap: 12px !important;
            }

                .modal-header h5 i {
                    font-size: 1.3rem !important;
                    opacity: 0.9 !important;
                }

        .modal-body {
            padding: 40px !important;
            background: white !important;
            max-height: calc(90vh - 200px) !important;
            overflow-y: auto !important;
        }

            .modal-body::-webkit-scrollbar {
                width: 8px;
            }

            .modal-body::-webkit-scrollbar-track {
                background: #f1f1f1;
                border-radius: 10px;
            }

            .modal-body::-webkit-scrollbar-thumb {
                background: var(--cseds-purple);
                border-radius: 10px;
            }

                .modal-body::-webkit-scrollbar-thumb:hover {
                    background: var(--cseds-teal);
                }

        .modal-footer {
            padding: 25px 40px !important;
            background: #f8f9fa !important;
            border-radius: 0 !important;
            border-top: 1px solid #e9ecef !important;
            display: flex !important;
            gap: 12px !important;
            justify-content: flex-end !important;
        }

        .profile-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
        }

            .profile-header h1 {
                font-size: 2.5em;
                font-weight: 700;
                color: var(--royal-blue);
                margin: 0 0 10px 0;
                letter-spacing: 1.2px;
            }

            .profile-header p {
                color: #666;
                font-size: 1.2em;
                margin: 0;
            }

        .profile-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }

        .profile-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 35px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            position: relative;
            overflow: visible;
        }

            .profile-card::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 6px;
                background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
                border-radius: 20px 20px 0 0;
            }

        .card-title {
            color: var(--royal-blue);
            font-weight: 700;
            font-size: 1.4em;
            margin-bottom: 30px;
            margin-top: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 600 !important;
            color: var(--royal-blue) !important;
            margin-bottom: 8px !important;
            font-size: 0.95rem !important;
            display: block !important;
        }

            .form-label small {
                font-weight: 400 !important;
                color: #6c757d !important;
                font-size: 0.85rem !important;
            }

        .form-control {
            border: 2px solid var(--slate);
            border-radius: 12px !important;
            padding: 12px 16px !important;
            font-size: 1em !important;
            transition: all 0.3s ease !important;
            background: #fafafa !important;
            width: 100% !important;
            box-sizing: border-box !important;
            display: block !important;
        }

            .form-control:hover {
                border-color: #d0d0d0 !important;
                background: white !important;
            }

            .form-control:focus {
                border-color: var(--cseds-purple) !important;
                box-shadow: 0 0 0 4px rgba(111, 66, 193, 0.1) !important;
                background: white !important;
                outline: none !important;
            }

            .form-control::placeholder {
                color: #adb5bd !important;
                font-size: 0.95rem !important;
            }

            .form-control.is-invalid {
                border-color: #dc3545 !important;
            }

            .form-control:read-only {
                background: #f5f5f5 !important;
                cursor: not-allowed !important;
                color: #6c757d !important;
            }

        .text-muted {
            display: block !important;
            margin-top: 6px !important;
            font-size: 0.85rem !important;
            color: #6c757d !important;
        }

        .glass-btn {
            background: linear-gradient(135deg, var(--cseds-purple) 0%, var(--cseds-teal) 100%);
            color: white;
            border: none;
            border-radius: 12px !important;
            padding: 12px 25px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 6px 20px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s ease;
            width: 100%;
            justify-content: center;
        }

            .glass-btn:hover {
                background: linear-gradient(135deg, var(--cseds-teal) 0%, var(--cseds-purple) 100%);
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(111, 66, 193, 0.4);
                text-decoration: none;
                color: white;
            }

        .btn-secondary {
            background: linear-gradient(135deg, #6c757d, #5a6268) !important;
            border: none !important;
            color: white !important;
            border-radius: 12px !important;
            padding: 12px 28px !important;
            font-weight: 600 !important;
            transition: all 0.2s !important;
        }

            .btn-secondary:hover {
                transform: translateY(-2px) !important;
                box-shadow: 0 6px 20px rgba(108, 117, 125, 0.3) !important;
            }

        .back-btn {
            background: rgba(220, 53, 69, 0.9);
            color: white;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-weight: 600;
            text-decoration: none;
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 20px;
        }

            .back-btn:hover {
                background: rgba(220, 53, 69, 1);
                transform: translateY(-2px);
                text-decoration: none;
                color: white;
            }

        .info-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid rgba(111, 66, 193, 0.1);
        }

            .info-item:last-child {
                border-bottom: none;
            }

        .info-label {
            font-weight: 600;
            color: var(--royal-blue);
        }

        .info-value {
            color: #666;
            font-weight: 500;
        }

        .department-badge {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9em;
        }

        .alert {
            border-radius: 15px;
            border: none;
            padding: 15px 20px;
            margin-bottom: 20px;
            animation: slideIn 0.3s ease-out;
        }

        @@keyframes slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .alert-success {
            background: rgba(40, 167, 69, 0.1);
            color: #155724;
            border-left: 4px solid #28a745;
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            color: #721c24;
            border-left: 4px solid #dc3545;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .profile-content {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .profile-header {
                padding: 25px 20px;
            }

                .profile-header h1 {
                    font-size: 2em;
                }

            .profile-card {
                padding: 20px;
            }

            .modal-dialog {
                margin: 10px !important;
            }

            .modal-body {
                padding: 30px 25px !important;
            }

            .modal-header,
            .modal-footer {
                padding: 20px 25px !important;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Back Button -->
        <a href="@Url.Action("CSEDSDashboard", "Admin")" class="back-btn">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>

        <!-- Header Section -->
        <div class="profile-header">
            <h1><i class="fas fa-user-shield"></i> CSEDS Admin Profile</h1>
            <p>Computer Science & Engineering - Data Science Department Administration</p>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            </div>
        }

        <div class="profile-content">
            <!-- Profile Information -->
            <div class="profile-card">
                <h3 class="card-title">
                    <i class="fas fa-user"></i> Profile Information
                </h3>

                @using (Html.BeginForm("UpdateProfile", "Admin", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.AdminId)

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @required = "required" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Department, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Department, new { @class = "form-control", @readonly = "readonly" })
                        <small class="text-muted">Department cannot be changed</small>
                    </div>

                    <button type="submit" class="glass-btn">
                        <i class="fas fa-save"></i> Update Profile
                    </button>
                }
            </div>

            <!-- Additional Information -->
            <div class="profile-card">
                <h3 class="card-title">
                    <i class="fas fa-info-circle"></i> Account Details
                </h3>

                <div class="info-item">
                    <span class="info-label">Admin ID:</span>
                    <span class="info-value">#@Model.AdminId</span>
                </div>

                <div class="info-item">
                    <span class="info-label">Department:</span>
                    <span class="department-badge">@Model.Department</span>
                </div>

                <div class="info-item">
                    <span class="info-label">Account Created:</span>
                    <span class="info-value">@Model.CreatedDate.ToString("MMM dd, yyyy")</span>
                </div>

                @if (Model.LastLogin.HasValue)
                {
                    <div class="info-item">
                        <span class="info-label">Last Login:</span>
                        <span class="info-value">@Model.LastLogin.Value.ToString("MMM dd, yyyy hh:mm tt")</span>
                    </div>
                }

                <div style="margin-top: 25px;">
                    <button type="button" class="glass-btn" onclick="openChangePasswordModal()">
                        <i class="fas fa-lock"></i> Change Password
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Change Password Modal -->
    <div class="modal" id="changePasswordModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-lock"></i> Change Password
                    </h5>
                </div>
                <div class="modal-body">
                    <form id="changePasswordForm">
                        <input type="hidden" id="adminId" value="@Model.AdminId" />
                        <input type="hidden" id="adminEmail" value="@Model.Email" />

                        <div class="form-group">
                            <label for="currentPassword" class="form-label">Current Password</label>
                            <input type="password" id="currentPassword" name="CurrentPassword" class="form-control" placeholder="Enter your current password" required />
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="form-group">
                            <label for="newPassword" class="form-label">New Password</label>
                            <input type="password" id="newPassword" name="NewPassword" class="form-control" placeholder="Enter new password" minlength="6" required />
                            <div class="invalid-feedback"></div>
                            <small class="text-muted">Password must be at least 6 characters long</small>
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control" placeholder="Re-enter new password" required />
                            <div class="invalid-feedback"></div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeChangePasswordModal()">Cancel</button>
                    <button type="button" class="glass-btn" onclick="submitChangePassword()">
                        <i class="fas fa-save"></i> Change Password
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <script>
        console.log('? CSEDS Admin Profile Page Loading...');

        function openChangePasswordModal() {
            console.log('Opening Change Password Modal');
            document.getElementById('changePasswordModal').classList.add('show');
        }

        function closeChangePasswordModal() {
            console.log('Closing Change Password Modal');
            document.getElementById('changePasswordModal').classList.remove('show');
            // Clear form and validation
            document.getElementById('changePasswordForm').reset();
            document.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));
            document.querySelectorAll('.invalid-feedback').forEach(el => el.textContent = '');
        }

        // Submit Change Password Form
        async function submitChangePassword() {
            // Clear previous validation
            document.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));
            document.querySelectorAll('.invalid-feedback').forEach(el => el.textContent = '');

            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            // Client-side validation
            let isValid = true;

            if (!currentPassword) {
                showFieldError('currentPassword', 'Current password is required');
                isValid = false;
            }

            if (!newPassword) {
                showFieldError('newPassword', 'New password is required');
                isValid = false;
            } else if (newPassword.length < 6) {
                showFieldError('newPassword', 'Password must be at least 6 characters long');
                isValid = false;
            }

            if (!confirmPassword) {
                showFieldError('confirmPassword', 'Please confirm your new password');
                isValid = false;
            } else if (newPassword !== confirmPassword) {
                showFieldError('confirmPassword', 'New password and confirmation password do not match');
                isValid = false;
            }

            if (!isValid) return;

            const formData = {
                AdminId: parseInt(document.getElementById('adminId').value),
                AdminEmail: document.getElementById('adminEmail').value,
                CurrentPassword: currentPassword,
                NewPassword: newPassword,
                ConfirmPassword: confirmPassword
            };

            try {
                const response = await fetch('@Url.Action("ChangeAdminPassword", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    closeChangePasswordModal();
                    showAlert(result.message, 'success');
                } else {
                    showAlert(result.message, 'danger');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('Error changing password. Please try again.', 'danger');
            }
        }

        function showFieldError(fieldId, message) {
            const field = document.getElementById(fieldId);
            const feedback = field.nextElementSibling;

            field.classList.add('is-invalid');
            if (feedback && feedback.classList.contains('invalid-feedback')) {
                feedback.textContent = message;
            }
        }

        function showAlert(message, type) {
            // Remove existing alerts
            document.querySelectorAll('.alert').forEach(alert => {
                if (!alert.closest('.main-container')) return;
                alert.remove();
            });

            const alertHtml = `
                <div class="alert alert-${type}" role="alert">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'}"></i> ${message}
                </div>
            `;

            const container = document.querySelector('.main-container');
            const header = container.querySelector('.profile-header');
            header.insertAdjacentHTML('afterend', alertHtml);

            // Auto-remove after 5 seconds
            setTimeout(() => {
                const alert = container.querySelector('.alert');
                if (alert) alert.remove();
            }, 5000);
        }

        // Password confirmation validation
        document.getElementById('confirmPassword').addEventListener('input', function() {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = this.value;

            if (confirmPassword && newPassword !== confirmPassword) {
                this.classList.add('is-invalid');
                this.nextElementSibling.textContent = 'Passwords do not match';
            } else {
                this.classList.remove('is-invalid');
                this.nextElementSibling.textContent = '';
            }
        });

        // Close modal when clicking outside
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('modal') && e.target.classList.contains('show')) {
                closeChangePasswordModal();
            }
        });

        // Prevent form submission on Enter key, submit via button instead
        document.getElementById('changePasswordForm').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                submitChangePassword();
            }
        });

        console.log(' CSEDS Admin Profile Page Ready!');
    </script>
</body>
</html>