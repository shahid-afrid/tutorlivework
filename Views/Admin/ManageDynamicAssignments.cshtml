            /* Responsive Header */
            .page-header-content {
                flex-direction: column;
                align-items: flex-start;
            }

            .page-header-actions {
                width: 100%;
                justify-content: flex-start;
            }

            .page-header h1 {
                font-size: 1.4em;
            }
        }
    
        /* App Footer Styling */
        .app-footer {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--slate, #CED3DC);
            box-shadow: 0 -8px 32px rgba(39,64,96,0.13);
            padding: 30px 20px;
            margin-top: 50px;
            text-align: center;
            font-family: 'Montserrat', Arial, sans-serif;
            color: #274060;
            position: relative;
            border-radius: 20px 20px 0 0;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-line {
            margin: 8px 0;
            line-height: 1.6;
        }

        .footer-line.guidance { font-size: 1em; font-weight: 600; color: #444;
            margin-bottom: 12px;
        }

        .footer-line.team {
            font-size: 0.95em;
            font-weight: 500;
            color: #444;
        }

        .footer-line.copyright {
            font-size: 0.9em;
            font-weight: 600;
            color: #274060;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 2px solid rgba(39,64,96,0.1);
        }

        .footer-highlight { color: #274060;
            font-weight: 700;
        }

        .footer-name { color: #274060;
            font-weight: 600;
        }

        @@media (max-width: 768px) {
            .app-footer {
                padding: 20px 15px;
                margin-top: 30px;
            }

            .footer-line.guidance {
                font-size: 0.9em;
            }

            .footer-line.team {
                font-size: 0.85em;
            }

            .footer-line.copyright {
                font-size: 0.8em;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="page-header-content">
                <div class="page-header-left">
                    <h1>
                        <i class="fas fa-link"></i>
                        @ViewBag.DepartmentName Faculty-Subject Assignments
                    </h1>
                </div>
                <div class="page-header-actions">
                    <a href="@Url.Action("DynamicDashboard", "Admin", new { department = ViewBag.DepartmentCode })" class="glass-btn">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>

        <!-- Subjects Assignment Section -->
        <div class="subjects-section">
            <div class="section-title">
                <h3><i class="fas fa-link"></i> Subject Assignments</h3>
                <div class="title-actions">
                    <a href="@Url.Action("ManageDynamicSubjects", "Admin", new { department = ViewBag.DepartmentCode })" class="glass-btn">
                        <i class="fas fa-book"></i> Manage Subjects
                    </a>
                    <a href="@Url.Action("ManageDynamicFaculty", "Admin", new { department = ViewBag.DepartmentCode })" class="glass-btn">
                        <i class="fas fa-users"></i> Manage Faculty
                    </a>
                </div>
            </div>

            <!-- Subject Cards -->
            @foreach (var subject in Model.SubjectsWithAssignments)
            {
                <div class="subject-card">
                    <!-- Subject Header -->
                    <div class="subject-header">
                        <div class="subject-info">
                            <h4>@subject.Name</h4>
                            <div class="subject-badges">
                                <span class="subject-badge badge-year"><i class="fas fa-graduation-cap"></i> Year @subject.Year</span>
                                <span class="subject-badge badge-semester"><i class="fas fa-calendar-alt"></i> @subject.Semester</span>
                                <span class="subject-badge badge-enrollments"><i class="fas fa-users"></i> @subject.TotalEnrollments Students</span>
                                <span class="subject-badge badge-status @(subject.IsActive ? "active" : "inactive")">
                                    <i class="fas fa-circle"></i> @(subject.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Subject Details -->
                    <div class="subject-details">
                        <div class="row">
                            <div class="col-md-6">
                                <strong><i class="fas fa-building"></i> Department:</strong> @subject.Department
                            </div>
                            <div class="col-md-6">
                                <strong><i class="fas fa-calendar-check"></i> Semester Period:</strong> 
                                @if (subject.SemesterStartDate.HasValue && subject.SemesterEndDate.HasValue)
                                {
                                    <span>@subject.SemesterStartDate.Value.ToString("MMM dd, yyyy") - @subject.SemesterEndDate.Value.ToString("MMM dd, yyyy")</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not specified</span>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Faculty Assignments -->
                    <div class="faculty-assignments">
                        <h6>
                            <i class="fas fa-chalkboard-teacher"></i>
                            Assigned Faculty (@subject.AssignedFaculty.Count)
                        </h6>
                        
                        @if (subject.AssignedFaculty.Any())
                        {
                            <div class="faculty-list">
                                @foreach (var faculty in subject.AssignedFaculty)
                                {
                                    <div class="faculty-item">
                                        <div class="faculty-info">
                                            <div class="faculty-name"><i class="fas fa-user"></i> @faculty.Name</div>
                                            <div class="faculty-email"><i class="fas fa-envelope"></i> @faculty.Email</div>
                                        </div>
                                        <button type="button" class="remove-faculty-btn" 
                                                onclick="RemoveDynamicFacultyAssignment(@faculty.AssignedSubjectId, '@Html.Raw(faculty.Name.Replace("'", "\\'"))', '@Html.Raw(subject.Name.Replace("'", "\\'"))')"
                                                title="Remove assignment">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="no-faculty">
                                <i class="fas fa-exclamation-triangle"></i>
                                <p>No faculty assigned to this subject</p>
                            </div>
                        }

                        <!-- Assignment Controls -->
                        <div class="assignment-controls">
                            <button type="button" class="btn btn-info" 
                                    onclick="openAssignModal(@subject.SubjectId, '@Html.Raw(subject.Name.Replace("'", "\\'"))')">
                                <i class="fas fa-plus-circle"></i> Assign Faculty
                            </button>
                            <button type="button" class="btn btn-warning" 
                                    onclick="viewSubjectDetails(@subject.SubjectId, '@Html.Raw(subject.Name.Replace("'", "\\'"))')">
                                <i class="fas fa-eye"></i> View Details
                            </button>
                        </div>
                    </div>
                </div>
            }

            @if (!Model.SubjectsWithAssignments.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i>
                    <strong>No subjects found</strong> in the @ViewBag.DepartmentName department. 
                    <a href="@Url.Action("ManageDynamicSubjects", "Admin", new { department = ViewBag.DepartmentCode })" class="alert-link">Add some subjects</a> to get started.
                </div>
            }
        </div>
    </div>

    <!-- Assign Faculty Modal -->
    <div class="modal" id="assignFacultyModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assignFacultyModalLabel">
                        <i class="fas fa-link"></i> Assign Faculty to Subject
                    </h5>
                </div>
                <form id="assignFacultyForm">
                    <input type="hidden" id="assignSubjectId">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="subjectName" class="form-label"><i class="fas fa-book"></i> Subject</label>
                            <input type="text" class="form-control" id="subjectName" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="fas fa-users-cog"></i> Select Faculty Members</label>
                            <div class="faculty-selection-container">
                                <div class="search-box">
                                    <i class="fas fa-search"></i>
                                    <input type="text" class="form-control" id="facultySearch" 
                                           placeholder="Search faculty by name or email...">
                                </div>
                                <div class="faculty-checkboxes" id="facultyCheckboxList">
                                    @foreach (var faculty in Model.AvailableFaculty)
                                    {
                                        <div class="faculty-checkbox-item" data-faculty-name="@faculty.Name.ToLower()" data-faculty-email="@faculty.Email.ToLower()">
                                            <input class="form-check-input" type="checkbox" value="@faculty.FacultyId" 
                                                   id="faculty_@faculty.FacultyId" name="selectedFaculty">
                                            <label class="form-check-label" for="faculty_@faculty.FacultyId">
                                                <div class="faculty-checkbox-info">
                                                    <div class="faculty-checkbox-name">@faculty.Name</div>
                                                    <div class="faculty-checkbox-email">@faculty.Email</div>
                                                </div>
                                            </label>
                                        </div>
                                    }
                                </div>
                                <div class="selection-summary">
                                    <i class="fas fa-check-circle"></i> <span id="selectedCount">0</span> faculty member(s) selected
                                </div>
                            </div>
                        </div>
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Note:</strong> Assigning new faculty will replace all current assignments for this subject.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" onclick="closeAssignModal()">
                            <i class="fas fa-times"></i> Cancel
                        </button>
                        <button type="submit" class="glass-btn">
                            <i class="fas fa-save"></i> Assign Faculty
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Subject Details Modal -->
    <div class="modal" id="subjectDetailsModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="subjectDetailsModalLabel">
                        <i class="fas fa-info-circle"></i> Subject Details
                    </h5>
                </div>
                <div class="modal-body" id="subjectDetailsContent">
                    <!-- Dynamic content will be loaded here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeDetailsModal()">
                        <i class="fas fa-times"></i> Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        console.log('=== Subject Assignment Page Loading ===');
        const departmentCode = '@ViewBag.DepartmentCode';

        // Utility function to show alerts
        function showAlert(msg, type = 'success') {
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alert.style.cssText = 'top: 20px; right: 20px; z-index: 99999; min-width: 300px;';
            alert.innerHTML = `
                <strong>${type === 'success' ? '<i class="fas fa-check-circle"></i>' : '<i class="fas fa-exclamation-circle"></i>'}</strong> ${msg}
                <button type="button" class="btn-close" onclick="this.parentElement.remove()"></button>
            `;
            document.body.appendChild(alert);
            setTimeout(() => alert.remove(), 4000);
        }

        // Open Assign Faculty Modal
        function openAssignModal(subjectId, subjectName) {
            console.log('Opening Assign Modal:', subjectId, subjectName);
            
            document.getElementById('assignSubjectId').value = subjectId;
            document.getElementById('subjectName').value = subjectName;
            
            // Clear all checkboxes
            document.querySelectorAll('input[name="selectedFaculty"]').forEach(cb => cb.checked = false);
            updateSelectedCount();
            
            // Clear search
            const searchInput = document.getElementById('facultySearch');
            if (searchInput) searchInput.value = '';
            
            // Show all faculty items
            document.querySelectorAll('.faculty-checkbox-item').forEach(item => item.classList.remove('hidden'));
            
            // Show modal
            document.getElementById('assignFacultyModal').classList.add('show');
        }

        // Close Assign Modal
        function closeAssignModal() {
            document.getElementById('assignFacultyModal').classList.remove('show');
        }

        // View Subject Details
        function viewSubjectDetails(subjectId, subjectName) {
            console.log('Opening Details Modal:', subjectId, subjectName);
            
            document.getElementById('subjectDetailsModalLabel').innerHTML = 
                `<i class="fas fa-info-circle"></i> ${subjectName} - Details`;
            
            document.getElementById('subjectDetailsContent').innerHTML = `
                <div class="alert alert-info">
                    <h6><i class="fas fa-book"></i> Subject Information</h6>
                    <p><strong>Subject:</strong> ${subjectName}</p>
                    <p><strong>Subject ID:</strong> ${subjectId}</p>
                    <hr>
                    <p class="mb-0"><i class="fas fa-info-circle"></i> Detailed enrollment and assignment information will be available here.</p>
                </div>
            `;
            
            document.getElementById('subjectDetailsModal').classList.add('show');
        }

        // Close Details Modal
        function closeDetailsModal() {
            document.getElementById('subjectDetailsModal').classList.remove('show');
        }

        // Update selected count
        function updateSelectedCount() {
            const count = document.querySelectorAll('input[name="selectedFaculty"]:checked').length;
            document.getElementById('selectedCount').textContent = count;
        }

        // Form submission
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Page initialized');
            
            // Setup checkbox change listener
            document.querySelectorAll('input[name="selectedFaculty"]').forEach(cb => {
                cb.addEventListener('change', updateSelectedCount);
            });
            
            // Setup faculty search
            const searchInput = document.getElementById('facultySearch');
            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    document.querySelectorAll('.faculty-checkbox-item').forEach(item => {
                        const name = item.getAttribute('data-faculty-name');
                        const email = item.getAttribute('data-faculty-email');
                        
                        if (name.includes(searchTerm) || email.includes(searchTerm)) {
                            item.classList.remove('hidden');
                        } else {
                            item.classList.add('hidden');
                        }
                    });
                });
            }
            
            // Setup form submit
            const form = document.getElementById('assignFacultyForm');
            if (form) {
                form.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    const selectedFaculty = Array.from(document.querySelectorAll('input[name="selectedFaculty"]:checked'))
                        .map(cb => parseInt(cb.value));

                    if (selectedFaculty.length === 0) {
                        showAlert('Please select at least one faculty member', 'warning');
                        return;
                    }

                    const formData = {
                        SubjectId: parseInt(document.getElementById('assignSubjectId').value),
                        FacultyIds: selectedFaculty
                    };

                    console.log('Submitting:', formData);

                    try {
                        const response = await fetch(`@Url.Action("AssignDynamicFacultyToSubject", "Admin")?department=${departmentCode}`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(formData)
                        });

                        const result = await response.json();
                        
                        if (result.success) {
                            showAlert('Faculty assigned successfully!', 'success');
                            closeAssignModal();
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            showAlert('Error: ' + (result.message || 'Unknown error'), 'danger');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        showAlert('Error assigning faculty. Please try again.', 'danger');
                    }
                });
            }
            
            // Close modals when clicking outside
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('modal') && e.target.classList.contains('show')) {
                    e.target.classList.remove('show');
                }
            });
        });

        // Remove Faculty Assignment
        async function RemoveDynamicFacultyAssignment(assignedSubjectId, facultyName, subjectName) {
            if (!confirm(`Are you sure you want to remove "${facultyName}" from "${subjectName}"?`)) {
                return;
            }

            try {
                const response = await fetch(`@Url.Action("RemoveDynamicFacultyAssignment", "Admin")?department=${departmentCode}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ AssignedSubjectId: assignedSubjectId })
                });

                const result = await response.json();
                
                if (result.success) {
                    showAlert('Faculty assignment removed successfully!', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showAlert('Error: ' + (result.message || 'Unknown error'), 'danger');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('Error removing assignment. Please try again.', 'danger');
            }
        }

        console.log('=== Subject Assignment Page Ready ===');
    </script>

    <footer class="app-footer">
        <div class="footer-content">
            <div class="footer-line guidance">
                Developed under the guidance of <span class="footer-highlight">Dr. P. Penchala Prasad</span>, Associate Professor, @ViewBag.DepartmentName, RGMCET
            </div>
            <div class="footer-line team">
                With team <span class="footer-name">Mr. S. Md. Shahid Afrid</span> (23091A32D4) & <span class="footer-name">Ms. G. Veena</span> (23091A32H9)
            </div>
            <div class="footer-line copyright">
                &copy; All Rights Reserved @@2025
            </div>
        </div>
    </footer>
</body>
</html>

