        // Function to load faculty based on selected subject
        async function loadFacultyForSubject(subjectId) {
            const facultySelect = document.getElementById('reportFaculty');
            
            // Clear current faculty options except "All Faculty"
            facultySelect.innerHTML = '<option value="">All Faculty</option>';
            
            if (!subjectId) {
                // If no subject selected, load all @ViewBag.DepartmentName faculty
                const allFaculty = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.AvailableFaculty.Select(f => new { FacultyId = f.FacultyId, Name = f.Name })));
                allFaculty.forEach(faculty => {
                    const option = document.createElement('option');
                    option.value = faculty.facultyId;
                    option.textContent = faculty.name;
                    facultySelect.appendChild(option);
                });
                return;
            }

            try {
                const response = await fetch(`@Url.Action("GetFacultyBySubject", "AdminReports")?subjectId=${subjectId}`);
                const result = await response.json();
                
                if (result.success && result.data) {
                    result.data.forEach(faculty => {
                        const option = document.createElement('option');
                        option.value = faculty.facultyId;
                        option.textContent = faculty.name;
                        facultySelect.appendChild(option);
                    });
                } else {
                    console.error('Error loading faculty for subject:', result.message);
                    // Fallback to show all faculty
                    const allFaculty = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.AvailableFaculty.Select(f => new { FacultyId = f.FacultyId, Name = f.Name })));
                    allFaculty.forEach(faculty => {
                        const option = document.createElement('option');
                        option.value = faculty.facultyId;
                        option.textContent = faculty.name;
                        facultySelect.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Error loading faculty:', error);
                // Fallback to show all faculty
                const allFaculty = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.AvailableFaculty.Select(f => new { FacultyId = f.FacultyId, Name = f.Name })));
                allFaculty.forEach(faculty => {
                    const option = document.createElement('option');
                    option.value = faculty.facultyId;
                    option.textContent = faculty.name;
                    facultySelect.appendChild(option);
                });
            }
        }
