@model TutorLiveMentor.Models.CSEDSReportsViewModel
@{
    ViewData["Title"] = "Reports & Analytics";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.DepartmentName Reports & Analytics - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --cseds-purple: #6f42c1;
            --cseds-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .page-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
        }

        .page-header h1 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0 0 10px 0;
            letter-spacing: 1.2px;
        }

        .filters-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            margin-bottom: 30px;
        }

        .filters-header {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: center;
        }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 0;
        }

        .form-label {
            display: block;
            font-weight: 600;
            font-size: 0.9em;
            color: var(--royal-blue);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 2px solid var(--slate);
            border-radius: 8px;
            font-size: 1em;
            background: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
            box-sizing: border-box;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--cseds-purple);
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.1);
        }

        .column-selector {
            background: rgba(255, 255, 255, 0.9);
            border: 2px solid var(--slate);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .column-selector h5 {
            color: var(--royal-blue);
            margin-bottom: 15px;
            font-weight: 600;
        }

        .columns-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 12px;
        }

        .checkbox-item {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 8px;
            background: rgba(249, 250, 242, 0.5);
            border-radius: 6px;
            transition: background 0.2s ease;
        }

        .checkbox-item:hover {
            background: rgba(111, 66, 193, 0.1);
        }

        .checkbox-item input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .checkbox-item label {
            cursor: pointer;
            margin: 0;
            font-weight: 500;
            color: var(--royal-blue);
        }

        .glass-btn {
            background: linear-gradient(135deg, var(--cseds-purple) 0%, var(--cseds-teal) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 25px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 6px 20px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .glass-btn:hover {
            background: linear-gradient(135deg, var(--cseds-teal) 0%, var(--cseds-purple) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(111, 66, 193, 0.4);
            text-decoration: none;
            color: white;
        }

        .glass-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .btn-group {
            display: flex;
            gap: 15px;
            justify-content: flex-start;
            flex-wrap: wrap;
        }

        .btn-excel {
            background: linear-gradient(135deg, #28a745, #20c997);
        }

        .btn-pdf {
            background: linear-gradient(135deg, #dc3545, #fd7e14);
        }

        .btn-back {
            background: linear-gradient(135deg, var(--slate) 0%, #95a5a6 100%);
        }

        .btn-back:hover {
            background: linear-gradient(135deg, #95a5a6 0%, var(--slate) 100%);
        }

        .results-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            display: none;
        }

        .results-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid var(--slate);
        }

        .table-container {
            max-height: 500px;
            overflow-y: auto;
            border: 2px solid var(--slate);
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }

        .table th {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            padding: 15px 12px;
            text-align: left;
            font-weight: 600;
            border: none;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .table td {
            padding: 12px;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

        .table tr:hover {
            background: rgba(111, 66, 193, 0.05);
        }

        .table tr:nth-child(even) {
            background: rgba(249, 250, 242, 0.3);
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .empty-state i {
            font-size: 4em;
            color: var(--cseds-purple);
            margin-bottom: 20px;
        }

        .record-count {
            color: #666;
            font-weight: 600;
            padding: 10px;
            background: rgba(111, 66, 193, 0.1);
            border-radius: 8px;
            text-align: center;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
            }

            .filter-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .btn-group {
                justify-content: center;
            }

            .table th, .table td {
                padding: 8px 6px;
                font-size: 0.9em;
            }

            .results-header {
                flex-direction: column;
                gap: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header Section -->
        <div class="page-header">
            <h1><i class="fas fa-chart-bar"></i> @ViewBag.DepartmentName Reports & Analytics</h1>
            <p>Generate detailed enrollment reports with advanced filtering options</p>
        </div>

        <!-- Filters Section -->
        <div class="filters-card">
            <div class="filters-header">
                <h4 style="margin: 0;"><i class="fas fa-filter"></i> Report Filters</h4>
            </div>
            
            <div class="filter-grid">
                <div class="form-group">
                    <label class="form-label">Subject</label>
                    <select id="reportSubject" class="form-control">
                        <option value="">All Subjects</option>
                        @foreach (var subject in Model.AvailableSubjects)
                        {
                            <option value="@subject.SubjectId">@subject.Name (Year @subject.Year, Sem @subject.Semester)</option>
                        }
                    </select>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Faculty</label>
                    <select id="reportFaculty" class="form-control">
                        <option value="">All Faculty</option>
                        @foreach (var faculty in Model.AvailableFaculty)
                        {
                            <option value="@faculty.FacultyId">@faculty.Name</option>
                        }
                    </select>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Year</label>
                    <select id="reportYear" class="form-control">
                        <option value="">All Years</option>
                        @foreach (var year in Model.AvailableYears)
                        {
                            <option value="@year">@year Year</option>
                        }
                    </select>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Semester</label>
                    <select id="reportSemester" class="form-control">
                        <option value="">All Semesters</option>
                        <option value="I">Semester I (1)</option>
                        <option value="II">Semester II (2)</option>
                    </select>
                </div>
            </div>

            <!-- Column Selection -->
            <div class="column-selector">
                <h5><i class="fas fa-columns"></i> Select Columns to Display & Export</h5>
                <div class="columns-grid">
                    <div class="checkbox-item">
                        <input type="checkbox" id="col_studentName" value="studentName" checked onchange="updateColumnVisibility()">
                        <label for="col_studentName">Student Name</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="col_regdNumber" value="regdNumber" checked onchange="updateColumnVisibility()">
                        <label for="col_regdNumber">Registration No</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="col_email" value="email" checked onchange="updateColumnVisibility()">
                        <label for="col_email">Student Email</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="col_year" value="year" checked onchange="updateColumnVisibility()">
                        <label for="col_year">Year</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="col_subject" value="subject" checked onchange="updateColumnVisibility()">
                        <label for="col_subject">Subject</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="col_faculty" value="faculty" checked onchange="updateColumnVisibility()">
                        <label for="col_faculty">Faculty</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="col_semester" value="semester" checked onchange="updateColumnVisibility()">
                        <label for="col_semester">Semester</label>
                    </div>
                    <div class="checkbox-item">
                        <input type="checkbox" id="col_enrollmentTime" value="enrollmentTime" checked onchange="updateColumnVisibility()">
                        <label for="col_enrollmentTime">Enrollment Time</label>
                    </div>
                </div>
            </div>
            
            <div class="btn-group">
                <button type="button" class="glass-btn" onclick="generateReport()">
                    <i class="fas fa-search"></i> Generate Report
                </button>
                <button type="button" class="glass-btn btn-excel" onclick="exportExcelCurrent()" id="exportExcelBtn" disabled>
                    <i class="fas fa-file-excel"></i> Export Excel
                </button>
                <button type="button" class="glass-btn btn-pdf" onclick="exportPDFCurrent()" id="exportPdfBtn" disabled>
                    <i class="fas fa-file-pdf"></i> Export PDF
                </button>
                <button type="button" class="glass-btn" onclick="debugExportIssue()" style="background: linear-gradient(135deg, #17a2b8, #138496);">
                    <i class="fas fa-bug"></i> Debug Export
                </button>
                <button type="button" class="glass-btn" onclick="testSession()" style="background: linear-gradient(135deg, #e83e8c, #dc3545);">
                    <i class="fas fa-vial"></i> Test Session
                </button>
                <a href="@Url.Action("DynamicDashboard", "Admin", new { department = ViewBag.DepartmentCode })" class="glass-btn btn-back">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Results Section -->
        <div id="reportResults" class="results-card">
            <div class="results-header">
                <h4 style="margin: 0; color: var(--royal-blue);">
                    <i class="fas fa-table"></i> Report Results
                </h4>
                <div id="reportCount" class="record-count">No data loaded</div>
            </div>
            
            <div class="table-container">
                <table class="table" id="reportTable">
                    <thead>
                        <tr>
                            <th class="col-regdNumber">Registration No</th>
                            <th class="col-studentName">Student Name</th>
                            <th class="col-email">Email</th>
                            <th class="col-year">Year</th>
                            <th class="col-subject">Subject</th>
                            <th class="col-faculty">Faculty</th>
                            <th class="col-semester">Semester</th>
                            <th class="col-enrollmentTime">Enrollment Time</th>
                        </tr>
                    </thead>
                    <tbody id="reportTableBody">
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="filters-card" style="display: none;">
            <div class="empty-state">
                <i class="fas fa-chart-line"></i>
                <h3>No Data Found</h3>
                <p>Try adjusting your filter criteria and generate the report again.</p>
            </div>
        </div>
    </div>

    <script>
        let currentReportData = [];

        // Column visibility state
        let visibleColumns = {
            studentName: true,
            regdNumber: true,
            email: true,
            year: true,
            subject: true,
            faculty: true,
            semester: true,
            enrollmentTime: true
        };

        function updateColumnVisibility() {
            // Update visibility state
            visibleColumns.studentName = document.getElementById('col_studentName').checked;
            visibleColumns.regdNumber = document.getElementById('col_regdNumber').checked;
            visibleColumns.email = document.getElementById('col_email').checked;
            visibleColumns.year = document.getElementById('col_year').checked;
            visibleColumns.subject = document.getElementById('col_subject').checked;
            visibleColumns.faculty = document.getElementById('col_faculty').checked;
            visibleColumns.semester = document.getElementById('col_semester').checked;
            visibleColumns.enrollmentTime = document.getElementById('col_enrollmentTime').checked;

            // Update table column visibility
            const table = document.getElementById('reportTable');
            if (table) {
                for (const [column, visible] of Object.entries(visibleColumns)) {
                    const headers = table.querySelectorAll(`.col-${column}`);
                    headers.forEach(header => {
                        header.style.display = visible ? '' : 'none';
                    });
                }
            }

            // Re-render data if already loaded
            if (currentReportData.length > 0) {
                displayReportResults(currentReportData);
            }
        }

        function formatEnrollmentTime(enrolledAt) {
            if (!enrolledAt) return 'N/A';
            
            // Ensure proper UTC parsing by adding 'Z' if not present
            let dateString = enrolledAt;
            if (!dateString.endsWith('Z') && !dateString.includes('+')) {
                dateString = dateString + 'Z'; // Force UTC interpretation
            }
            
            // Parse as UTC and convert to local time
            const date = new Date(dateString);
            
            // Format to match server-side format: MM/dd/yyyy hh:mm:ss.fff tt
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            const year = date.getFullYear();
            
            let hours = date.getHours();
            const ampm = hours >= 12 ? 'PM' : 'AM';
            hours = hours % 12;
            hours = hours ? hours : 12; // 0 should be 12
            const hoursStr = String(hours).padStart(2, '0');
            
            const minutes = String(date.getMinutes()).padStart(2, '0');
            const seconds = String(date.getSeconds()).padStart(2, '0');
            const milliseconds = String(date.getMilliseconds()).padStart(3, '0');
            
            // Return formatted string matching server format: "11/14/2025 04:34:25.727 PM"
            return `${month}/${day}/${year} ${hoursStr}:${minutes}:${seconds}.${milliseconds} ${ampm}`;
        }

        async function generateReport() {
            const departmentCode = '@ViewBag.DepartmentCode';
            const filters = {
                SelectedSubjectId: document.getElementById('reportSubject').value || null,
                SelectedFacultyId: document.getElementById('reportFaculty').value || null,
                SelectedYear: document.getElementById('reportYear').value || null,
                SelectedSemester: document.getElementById('reportSemester').value || null
            };

            console.log('Sending filters:', filters);

            try {
                const response = await fetch(`@Url.Action("GenerateDynamicReport", "Admin")?department=${departmentCode}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'same-origin',
                    body: JSON.stringify(filters)
                });

                const result = await response.json();
                console.log('Received result:', result);
                
                // Check for unauthorized/session issues
                if (result.unauthorized) {
                    alert('SESSION ERROR:\n\n' + result.message + '\n\nPlease refresh the page and log in again.');
                    window.location.href = '@Url.Action("Login", "Admin")';
                    return;
                }
                
                if (result.success) {
                    currentReportData = result.data;
                    displayReportResults(result.data);
                    document.getElementById('exportExcelBtn').disabled = false;
                    document.getElementById('exportPdfBtn').disabled = false;
                } else {
                    alert('Error generating report: ' + (result.message || 'Unknown error'));
                    showEmptyState();
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error generating report. Please try again. Check console for details.');
                showEmptyState();
            }
        }

        function displayReportResults(data) {
            const tbody = document.getElementById('reportTableBody');
            tbody.innerHTML = '';

            if (data.length === 0) {
                showEmptyState();
                return;
            }

            data.forEach(item => {
                const row = document.createElement('tr');
                
                // FIXED ORDER: Registration Number FIRST, then Student Name
                let rowHTML = '';
                if (visibleColumns.regdNumber) rowHTML += `<td class="col-regdNumber"><strong>${item.studentRegdNumber}</strong></td>`;
                if (visibleColumns.studentName) rowHTML += `<td class="col-studentName"><strong>${item.studentName}</strong></td>`;
                if (visibleColumns.email) rowHTML += `<td class="col-email">${item.studentEmail}</td>`;
                if (visibleColumns.year) rowHTML += `<td class="col-year">${item.studentYear}</td>`;
                if (visibleColumns.subject) rowHTML += `<td class="col-subject">${item.subjectName}</td>`;
                if (visibleColumns.faculty) rowHTML += `<td class="col-faculty">${item.facultyName}</td>`;
                if (visibleColumns.semester) rowHTML += `<td class="col-semester">Semester ${item.semester}</td>`;
                if (visibleColumns.enrollmentTime) rowHTML += `<td class="col-enrollmentTime">${formatEnrollmentTime(item.enrolledAt)}</td>`;
                
                row.innerHTML = rowHTML;
                tbody.appendChild(row);
            });

            document.getElementById('reportResults').style.display = 'block';
            document.getElementById('emptyState').style.display = 'none';
            document.getElementById('reportCount').textContent = `Total Records: ${data.length}`;
        }

        function showEmptyState() {
            document.getElementById('reportResults').style.display = 'none';
            document.getElementById('emptyState').style.display = 'block';
            document.getElementById('exportExcelBtn').disabled = true;
            document.getElementById('exportPdfBtn').disabled = true;
        }

        async function exportExcelCurrent() {
            if (currentReportData.length === 0) {
                alert('No data to export. Please generate a report first.');
                return;
            }

            try {
                // Show loading indicator
                const exportBtn = document.getElementById('exportExcelBtn');
                const originalText = exportBtn.innerHTML;
                exportBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Exporting...';
                exportBtn.disabled = true;

                // Format data for export - create DisplayData array with formatted enrollment times
                const displayData = currentReportData.map(item => ({
                    studentRegdNumber: item.studentRegdNumber,
                    studentName: item.studentName,
                    studentEmail: item.studentEmail,
                    studentYear: item.studentYear,
                    subjectName: item.subjectName,
                    facultyName: item.facultyName,
                    semester: item.semester,
                    enrollmentTimeFormatted: formatEnrollmentTime(item.enrolledAt) // Use formatted time
                }));

                const exportData = {
                    displayData: displayData, // Send pre-formatted data
                    selectedColumns: {
                        regdNumber: visibleColumns.regdNumber,
                        studentName: visibleColumns.studentName,
                        email: visibleColumns.email,
                        year: visibleColumns.year,
                        subject: visibleColumns.subject,
                        faculty: visibleColumns.faculty,
                        semester: visibleColumns.semester,
                        enrollmentTime: visibleColumns.enrollmentTime
                    }
                };

                console.log('Sending export data:', exportData);

                const response = await fetch('@Url.Action("ExportCurrentReportExcel", "AdminReports")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'same-origin',
                    body: JSON.stringify(exportData)
                });

                if (response.ok) {
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.style.display = 'none';
                    a.href = url;
                    a.download = `@ViewBag.DepartmentName_Enrollment_Report_${new Date().toISOString().slice(0,19).replace(/:/g, '-')}.xlsx`;
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);
                } else {
                    const errorText = await response.text();
                    console.error('Export failed:', errorText);
                    alert('Failed to export Excel file: ' + errorText);
                }

                // Restore button
                exportBtn.innerHTML = originalText;
                exportBtn.disabled = false;
            } catch (error) {
                console.error('Export error:', error);
                alert('Error exporting Excel file: ' + error.message);
                
                // Restore button
                const exportBtn = document.getElementById('exportExcelBtn');
                exportBtn.innerHTML = '<i class="fas fa-file-excel"></i> Export Excel';
                exportBtn.disabled = false;
            }
        }

        async function exportPDFCurrent() {
            if (currentReportData.length === 0) {
                alert('No data to export. Please generate a report first.');
                return;
            }

            try {
                // Show loading indicator
                const exportBtn = document.getElementById('exportPdfBtn');
                const originalText = exportBtn.innerHTML;
                exportBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Exporting...';
                exportBtn.disabled = true;

                // Format data for export - create DisplayData array with formatted enrollment times
                const displayData = currentReportData.map(item => ({
                    studentRegdNumber: item.studentRegdNumber,
                    studentName: item.studentName,
                    studentEmail: item.studentEmail,
                    studentYear: item.studentYear,
                    subjectName: item.subjectName,
                    facultyName: item.facultyName,
                    semester: item.semester,
                    enrollmentTimeFormatted: formatEnrollmentTime(item.enrolledAt) // Use formatted time
                }));

                const exportData = {
                    displayData: displayData, // Send pre-formatted data
                    selectedColumns: {
                        regdNumber: visibleColumns.regdNumber,
                        studentName: visibleColumns.studentName,
                        email: visibleColumns.email,
                        year: visibleColumns.year,
                        subject: visibleColumns.subject,
                        faculty: visibleColumns.faculty,
                        semester: visibleColumns.semester,
                        enrollmentTime: visibleColumns.enrollmentTime
                    }
                };

                console.log('Sending export data:', exportData);

                const response = await fetch('@Url.Action("ExportCurrentReportPDF", "AdminReports")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'same-origin',
                    body: JSON.stringify(exportData)
                });

                if (response.ok) {
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.style.display = 'none';
                    a.href = url;
                    a.download = `@ViewBag.DepartmentName_Enrollment_Report_${new Date().toISOString().slice(0,19).replace(/:/g, '-')}.pdf`;
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);
                } else {
                    const errorText = await response.text();
                    console.error('Export failed:', errorText);
                    alert('Failed to export PDF file: ' + errorText);
                }

                // Restore button
                exportBtn.innerHTML = originalText;
                exportBtn.disabled = false;
            } catch (error) {
                console.error('Export error:', error);
                alert('Error exporting PDF file: ' + error.message);
                
                // Restore button
                const exportBtn = document.getElementById('exportPdfBtn');
                exportBtn.innerHTML = '<i class="fas fa-file-pdf"></i> Export PDF';
                exportBtn.disabled = false;
            }
        }

