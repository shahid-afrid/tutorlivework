@model TutorLiveMentor.Models.FacultySelectionScheduleViewModel
@{
    ViewData["Title"] = "Faculty Selection Schedule - @ViewBag.DepartmentName";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Faculty Selection Schedule - @ViewBag.DepartmentName Department</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --@ViewBag.DepartmentName-purple: #6f42c1;
            --@ViewBag.DepartmentName-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .header-section {
            background: rgba(249,250,242,0.95);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--success-green), var(--@ViewBag.DepartmentName-teal));
            color: white;
            border: none;
            border-radius: 20px;
            padding: 15px 30px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-primary:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 70px;
            height: 34px;
        }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }

        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked + .toggle-slider {
            background-color: var(--success-green);
        }

        input:checked + .toggle-slider:before {
            transform: translateX(36px);
        }

        .alert {
            padding: 20px 25px;
            border-radius: 15px;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 15px;
            font-size: 1.05em;
            font-weight: 600;
            animation: slideDown 0.4s ease-out;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            border-width: 3px;
            border-style: solid;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .alert-success {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.95), rgba(32, 201, 151, 0.95));
            border-color: #1e7e34;
            color: white;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        }

        .alert-success i {
            font-size: 1.8em;
            color: white;
            filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
        }

        .alert-danger {
            background: linear-gradient(135deg, rgba(220, 53, 69, 0.95), rgba(255, 82, 82, 0.95));
            border-color: #bd2130;
            color: white;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        }

        .alert-danger i {
            font-size: 1.8em;
            color: white;
            filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
        }

        .alert-content {
            flex: 1;
            line-height: 1.6;
            font-weight: 500;
        }

        .alert-close {
            cursor: pointer;
            opacity: 0.8;
            transition: opacity 0.3s;
            font-size: 1.5em;
            padding: 0 8px;
            color: white;
            font-weight: bold;
        }

        .alert-close:hover {
            opacity: 1;
            transform: scale(1.1);
        }
    
        /* App Footer Styling */
        .app-footer {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--slate, #CED3DC);
            box-shadow: 0 -8px 32px rgba(39,64,96,0.13);
            padding: 30px 20px;
            margin-top: 50px;
            text-align: center;
            font-family: 'Montserrat', Arial, sans-serif;
            color: #274060;
            position: relative;
            border-radius: 20px 20px 0 0;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-line {
            margin: 8px 0;
            line-height: 1.6;
        }

        .footer-line.guidance { font-size: 1em; font-weight: 600; color: #444;
            margin-bottom: 12px;
        }

        .footer-line.team {
            font-size: 0.95em;
            font-weight: 500;
            color: #444;
        }

        .footer-line.copyright {
            font-size: 0.9em;
            font-weight: 600;
            color: #274060;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 2px solid rgba(39,64,96,0.1);
        }

        .footer-highlight { color: #274060;
            font-weight: 700;
        }

        .footer-name { color: #274060;
            font-weight: 600;
        }

        @@media (max-width: 768px) {
            .app-footer {
                padding: 20px 15px;
                margin-top: 30px;
            }

            .footer-line.guidance {
                font-size: 0.9em;
            }

            .footer-line.team {
                font-size: 0.85em;
            }

            .footer-line.copyright {
                font-size: 0.8em;
            }
        }
    </style>
</head>
<body>
    @Html.AntiForgeryToken()
    <div class="main-container">
        <div class="header-section">
            <h1><i class="fas fa-clock"></i> Faculty Selection Schedule - @Model.Department</h1>
            <a href="@Url.Action("DynamicDashboard", "Admin")" class="btn-primary" style="display:inline-block;text-decoration:none;">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>

        <div id="alertContainer"></div>

        <div class="header-section">
            <h4>Master Control</h4>
            <div style="display:flex;justify-content:space-between;align-items:center;padding:20px;background:rgba(111,66,193,0.05);border-radius:15px;">
                <div>
                    <h5 style="margin:0;">Faculty Selection</h5>
                    <p style="margin:0;color:#666;">Toggle to enable or disable faculty selection</p>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" id="isEnabledToggle" @(Model.IsEnabled ? "checked" : "")>
                    <span class="toggle-slider"></span>
                </label>
            </div>

            <div style="margin-top:20px;">
                <label for="disabledMessage" style="display:block;font-weight:600;margin-bottom:10px;">
                    Disabled Message (10-500 characters)
                </label>
                <textarea id="disabledMessage" style="width:100%;padding:12px;border:2px solid var(--slate);border-radius:12px;font-family:Montserrat;min-height:100px;" maxlength="500">@Model.DisabledMessage</textarea>
                <small style="color:#666;">
                    <span id="charCount">@Model.DisabledMessage.Length</span> / 500 characters
                </small>
            </div>

            <div style="margin-top:30px;">
                <button type="button" class="btn-primary" id="saveBtn">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script>
        console.log('? PAGE LOADING...');
        console.log('? jQuery loaded?', typeof jQuery !== 'undefined');

        // Character counter
        $('#disabledMessage').on('input', function() {
            $('#charCount').text($(this).val().length);
        });

        // Save button
        $('#saveBtn').on('click', function() {
            console.log('? BUTTON CLICKED!');
            
            const isEnabled = $('#isEnabledToggle').is(':checked');
            const disabledMessage = $('#disabledMessage').val().trim();

            console.log('Data:', { isEnabled, disabledMessage });

            // Validation
            if (disabledMessage.length < 10) {
                alert('Message must be at least 10 characters. Current: ' + disabledMessage.length);
                return;
            }

            if (!confirm('Are you sure you want to ' + (isEnabled ? 'ENABLE' : 'DISABLE') + ' faculty selection?')) {
                return;
            }

            // Get token
            const token = $('input[name="__RequestVerificationToken"]').val();
            if (!token) {
                alert('Security token missing! Refresh the page.');
                return;
            }

            console.log('? Sending AJAX request...');

            // Disable button
            const btn = $(this);
            btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Saving...');

            // AJAX request
            $.ajax({
                url: '@Url.Action("UpdateDynamicSchedule", "Admin")?department=@ViewBag.DepartmentCode',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    IsEnabled: isEnabled,
                    UseSchedule: false,
                    StartDateTime: null,
                    EndDateTime: null,
                    DisabledMessage: disabledMessage
                }),
                headers: {
                    'RequestVerificationToken': token
                },
                success: function(response) {
                    console.log('? SUCCESS!', response);
                    if (response.success) {
                        $('#alertContainer').html(
                            '<div class="alert alert-success">' +
                            '<i class="fas fa-check-circle"></i> ' +
                            '<div class="alert-content">' + response.message + '</div>' +
                            '<span class="alert-close" onclick="this.parentElement.remove()">?</span>' +
                            '</div>'
                        );
                        setTimeout(function() {
                            location.reload();
                        }, 2000);
                    } else {
                        $('#alertContainer').html(
                            '<div class="alert alert-danger">' +
                            '<i class="fas fa-exclamation-circle"></i> ' +
                            '<div class="alert-content">' + response.message + '</div>' +
                            '<span class="alert-close" onclick="this.parentElement.remove()">?</span>' +
                            '</div>'
                        );
                        btn.prop('disabled', false).html('<i class="fas fa-save"></i> Save Changes');
                    }
                },
                error: function(xhr) {
                    console.error('? ERROR!', xhr);
                    $('#alertContainer').html(
                        '<div class="alert alert-danger">' +
                        '<i class="fas fa-exclamation-triangle"></i> ' +
                        '<div class="alert-content">Failed to save changes. Status: ' + xhr.status + '. Please try again.</div>' +
                        '<span class="alert-close" onclick="this.parentElement.remove()">?</span>' +
                        '</div>'
                    );
                    btn.prop('disabled', false).html('<i class="fas fa-save"></i> Save Changes');
                }
            });
        });

        console.log('? Script loaded successfully!');
    </script>

    <footer class="app-footer">
        <div class="footer-content">
            <div class="footer-line guidance">
                Developed under the guidance of <span class="footer-highlight">Dr. P. Penchala Prasad</span>, Associate Professor, @ViewBag.DepartmentName, RGMCET
            </div>
            <div class="footer-line team">
                With team <span class="footer-name">Mr. S. Md. Shahid Afrid</span> (23091A32D4) & <span class="footer-name">Ms. G. Veena</span> (23091A32H9)
            </div>
            <div class="footer-line copyright">
                &copy; All Rights Reserved @@2025
            </div>
        </div>
    </footer>
</body>
</html>


