@model TutorLiveMentor.Models.CSEDSStudentViewModel
@{
    ViewData["Title"] = "Add CSE(DS) Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus"></i> Add New CSE(DS) Student
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="AddCSEDSStudent" asp-controller="Admin" method="post">
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Student Full Name <span class="text-danger">*</span></label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter student's full name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegdNumber" class="form-label">Registration Number <span class="text-danger">*</span></label>
                            <input asp-for="RegdNumber" class="form-control" placeholder="Enter registration number" />
                            <span asp-validation-for="RegdNumber" class="text-danger"></span>
                            <small class="form-text text-muted">Registration number will be converted to uppercase automatically.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address <span class="text-danger">*</span></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="student@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Leave empty for default password (TutorLive123)" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">If left blank, default password "TutorLive123" will be used.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Year" class="form-label">Year <span class="text-danger">*</span></label>
                            <select asp-for="Year" class="form-select">
                                <option value="">-- Select Year --</option>
                                @foreach (var year in Model.AvailableYears)
                                {
                                    <option value="@year">@year</option>
                                }
                            </select>
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Semester" class="form-label">Semester <span class="text-danger">*</span></label>
                            <select asp-for="Semester" class="form-select">
                                <option value="">-- Select Semester --</option>
                                <option value="I">Semester I (Odd)</option>
                                <option value="II">Semester II (Even)</option>
                            </select>
                            <span asp-validation-for="Semester" class="text-danger"></span>
                            <small class="form-text text-muted">Select the current semester (I or II)</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Department</label>
                            <input type="text" class="form-control" value="CSEDS (Data Science)" disabled readonly />
                            <small class="form-text text-muted">Department is automatically set to CSE(DS)</small>
                            <input type="hidden" asp-for="Department" value="CSEDS" />
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="ManageCSEDSStudents" asp-controller="Admin" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Students
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Add Student
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Auto-uppercase registration number as user types
        document.querySelector('input[name="RegdNumber"]').addEventListener('input', function(e) {
            this.value = this.value.toUpperCase();
        });
        
        // Form validation feedback
        document.querySelector('form').addEventListener('submit', function(e) {
            if (!this.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            }
            this.classList.add('was-validated');
        });
    </script>
}
