@model List<TutorLiveMentor.Models.DepartmentDetailViewModel>
@{
    ViewData["Title"] = "Manage Departments";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --super-admin-red: #dc3545;
            --super-admin-gold: #ffc107;
        }

        body {
            min-height: 100vh;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        .main-container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 20px;
        }

        .page-header {
            background: linear-gradient(135deg, var(--super-admin-red), var(--super-admin-gold));
            border-radius: 25px;
            padding: 30px 40px;
            margin-bottom: 30px;
            box-shadow: 0 15px 50px rgba(220, 53, 69, 0.3);
            color: white;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .page-title {
            font-size: 2em;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .back-btn {
            background: rgba(255, 255, 255, 0.25);
            backdrop-filter: blur(10px);
            color: white !important;
            border: 2px solid rgba(255, 255, 255, 0.5);
            border-radius: 20px;
            padding: 12px 24px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background: rgba(255, 255, 255, 0.35);
            border-color: white;
            transform: translateY(-2px);
        }

        .content-card {
            background: rgb(249, 250, 242);
            border: 2px solid var(--slate);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px rgba(39, 64, 96, 0.13);
        }

        .toolbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            gap: 15px;
            flex-wrap: wrap;
        }

        .search-box {
            flex: 1;
            max-width: 400px;
            position: relative;
        }

        .search-box input {
            width: 100%;
            padding: 12px 45px 12px 20px;
            border: 2px solid var(--slate);
            border-radius: 25px;
            font-size: 1em;
            transition: all 0.3s ease;
        }

        .search-box input:focus {
            outline: none;
            border-color: var(--super-admin-red);
            box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.1);
        }

        .search-box i {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--super-admin-red), var(--super-admin-gold));
            border: none;
            border-radius: 20px;
            padding: 12px 24px;
            font-weight: 600;
            color: white;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--super-admin-gold), var(--super-admin-red));
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(220, 53, 69, 0.3);
        }

        .departments-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

        .departments-table thead th {
            background: linear-gradient(135deg, var(--super-admin-red), var(--super-admin-gold));
            color: white;
            padding: 15px;
            text-align: left;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85em;
            letter-spacing: 0.5px;
        }

        .departments-table thead th:first-child {
            border-radius: 15px 0 0 15px;
        }

        .departments-table thead th:last-child {
            border-radius: 0 15px 15px 0;
        }

        .departments-table tbody tr {
            background: white;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }

        .departments-table tbody tr:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(111, 66, 193, 0.15);
        }

        .departments-table tbody td {
            padding: 20px 15px;
            vertical-align: middle;
        }

        .departments-table tbody tr td:first-child {
            border-radius: 15px 0 0 15px;
        }

        .departments-table tbody tr td:last-child {
            border-radius: 0 15px 15px 0;
        }

        .dept-code {
            display: inline-block;
            background: linear-gradient(135deg, #6f42c1, #20c997);
            color: white;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 0.85em;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .status-badge {
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: 600;
            display: inline-block;
        }

        .status-active {
            background: #d4edda;
            color: #155724;
            border: 1px solid #155724;
        }

        .status-inactive {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #721c24;
        }

        .stat-pill {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            padding: 4px 10px;
            background: rgba(111, 66, 193, 0.1);
            border-radius: 10px;
            font-size: 0.9em;
            margin-right: 8px;
        }

        .stat-pill i {
            color: #6f42c1;
        }

        .action-buttons {
            display: flex;
            gap: 8px;
        }

        .btn-action {
            padding: 8px 16px;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.85em;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .btn-view {
            background: #17a2b8;
            color: white;
        }

        .btn-view:hover {
            background: #138496;
            transform: translateY(-2px);
            color: white;
        }

        .btn-edit {
            background: #ffc107;
            color: #212529;
        }

        .btn-edit:hover {
            background: #e0a800;
            transform: translateY(-2px);
            color: #212529;
        }

        .btn-delete {
            background: #dc3545;
            color: white;
        }

        .btn-delete:hover {
            background: #c82333;
            transform: translateY(-2px);
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .empty-state i {
            font-size: 4em;
            color: #ccc;
            margin-bottom: 20px;
        }

        .app-footer {
            background: rgba(249,250,242,0.95);
            border-top: 3px solid var(--slate);
            padding: 25px 20px;
            margin-top: 50px;
            text-align: center;
            border-radius: 20px 20px 0 0;
        }

        @@media (max-width: 768px) {
            .departments-table {
                display: block;
                overflow-x: auto;
            }

            .toolbar {
                flex-direction: column;
                align-items: stretch;
            }

            .search-box {
                max-width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="page-header">
            <div class="header-content">
                <h1 class="page-title">
                    <i class="fas fa-building"></i>
                    Manage Departments
                </h1>
                <a href="@Url.Action("Dashboard", "SuperAdmin")" class="back-btn">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <div class="content-card">
            <div class="toolbar">
                <div class="search-box">
                    <input type="text" id="searchInput" placeholder="Search departments..." onkeyup="searchDepartments()">
                    <i class="fas fa-search"></i>
                </div>
                <a href="@Url.Action("CreateDepartment", "SuperAdmin")" class="btn-primary">
                    <i class="fas fa-plus"></i> Add New Department
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <table class="departments-table" id="departmentsTable">
                    <thead>
                        <tr>
                            <th>Department</th>
                            <th>Code</th>
                            <th>Status</th>
                            <th>Statistics</th>
                            <th>Admins</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dept in Model)
                        {
                            <tr>
                                <td>
                                    <strong style="color: var(--royal-blue); font-size: 1.1em;">@dept.DepartmentName</strong>
                                </td>
                                <td>
                                    <span class="dept-code">@dept.DepartmentCode</span>
                                </td>
                                <td>
                                    <span class="status-badge @(dept.IsActive ? "status-active" : "status-inactive")">
                                        <i class="fas fa-circle"></i> @(dept.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div>
                                        <span class="stat-pill">
                                            <i class="fas fa-user-graduate"></i> @dept.TotalStudents
                                        </span>
                                        <span class="stat-pill">
                                            <i class="fas fa-chalkboard-teacher"></i> @dept.TotalFaculty
                                        </span>
                                        <span class="stat-pill">
                                            <i class="fas fa-book"></i> @dept.TotalSubjects
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <strong style="color: #6f42c1;">@dept.TotalAdmins</strong> admins
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("EditDepartment", "SuperAdmin", new { id = dept.DepartmentId })" class="btn-action btn-edit">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <button class="btn-action btn-delete" onclick="confirmDelete(@dept.DepartmentId, '@dept.DepartmentName')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-building"></i>
                    <h3>No Departments Found</h3>
                    <p>Get started by adding your first department.</p>
                    <a href="@Url.Action("CreateDepartment", "SuperAdmin")" class="btn-primary" style="margin-top: 20px;">
                        <i class="fas fa-plus"></i> Add Department
                    </a>
                </div>
            }
        </div>
    </div>

    <footer class="app-footer">
        <div>Developed under the guidance of <strong>Dr. P. Penchala Prasad</strong>, Associate Professor, CSE(DS), RGMCET</div>
        <div>With team <strong>Mr. S. Md. Shahid Afrid</strong> (23091A32D4) & <strong>Ms. G. Veena</strong> (23091A32H9)</div>
        <div>&copy; All Rights Reserved @@2025</div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script>
        function searchDepartments() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toUpperCase();
            const table = document.getElementById('departmentsTable');
            const tr = table.getElementsByTagName('tr');

            for (let i = 1; i < tr.length; i++) {
                const td = tr[i].getElementsByTagName('td');
                let found = false;
                
                for (let j = 0; j < td.length; j++) {
                    if (td[j]) {
                        const txtValue = td[j].textContent || td[j].innerText;
                        if (txtValue.toUpperCase().indexOf(filter) > -1) {
                            found = true;
                            break;
                        }
                    }
                }
                
                tr[i].style.display = found ? "" : "none";
            }
        }

        function confirmDelete(id, name) {
            if (confirm(`Are you sure you want to delete "${name}"?\n\nThis action cannot be undone.`)) {
                window.location.href = '@Url.Action("DeleteDepartment", "SuperAdmin")?id=' + id;
            }
        }

        console.log('Manage Departments Page Loaded');
        console.log('Total Departments:', @Model.Count);
    </script>
</body>
</html>
