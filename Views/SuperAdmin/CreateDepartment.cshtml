@model TutorLiveMentor.Models.DepartmentDetailViewModel
@{
    ViewData["Title"] = "Create Department";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --super-admin-red: #dc3545;
            --super-admin-gold: #ffc107;
        }

        body {
            min-height: 100vh;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            padding: 20px;
        }

        .main-container {
            max-width: 900px;
            margin: 0 auto;
        }

        .page-header {
            background: linear-gradient(135deg, var(--super-admin-red), var(--super-admin-gold));
            border-radius: 25px;
            padding: 30px 40px;
            margin-bottom: 30px;
            box-shadow: 0 15px 50px rgba(220, 53, 69, 0.3);
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .page-title {
            font-size: 2em;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .back-btn {
            background: rgba(255, 255, 255, 0.25);
            color: white !important;
            border: 2px solid rgba(255, 255, 255, 0.5);
            border-radius: 20px;
            padding: 12px 24px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .form-card {
            background: rgb(249, 250, 242);
            border: 2px solid var(--slate);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 8px 32px rgba(39, 64, 96, 0.13);
        }

        .form-section {
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 1.3em;
            font-weight: 700;
            color: var(--royal-blue);
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 3px solid rgba(220, 53, 69, 0.2);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 600;
            color: var(--royal-blue);
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-control {
            border: 2px solid var(--slate);
            border-radius: 12px;
            padding: 12px 18px;
            font-size: 1em;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--super-admin-red);
            box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.1);
        }

        .form-check {
            padding: 15px;
            background: rgba(111, 66, 193, 0.05);
            border-radius: 12px;
            margin-bottom: 15px;
        }

        .form-check-input {
            width: 20px;
            height: 20px;
            margin-right: 10px;
        }

        .form-check-label {
            font-weight: 500;
            cursor: pointer;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--super-admin-red), var(--super-admin-gold));
            border: none;
            border-radius: 20px;
            padding: 15px 40px;
            font-weight: 700;
            font-size: 1.1em;
            color: white;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--super-admin-gold), var(--super-admin-red));
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(220, 53, 69, 0.3);
        }

        .btn-secondary {
            background: #6c757d;
            border: none;
            border-radius: 20px;
            padding: 15px 40px;
            font-weight: 700;
            font-size: 1.1em;
            color: white;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
        }

        .button-group {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.9em;
            margin-top: 5px;
        }

        .help-text {
            font-size: 0.85em;
            color: #666;
            margin-top: 5px;
        }

        .required-star {
            color: #dc3545;
            margin-left: 3px;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-plus-circle"></i>
                Create New Department
            </h1>
            <a href="@Url.Action("ManageDepartments", "SuperAdmin")" class="back-btn">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="form-card">
            <form asp-action="CreateDepartment" asp-controller="SuperAdmin" method="post" id="createDeptForm">
                @Html.AntiForgeryToken()
                
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Basic Information
                    </h3>

                    <div class="form-group">
                        <label asp-for="DepartmentName" class="form-label">
                            <i class="fas fa-building"></i> Department Name<span class="required-star">*</span>
                        </label>
                        <input asp-for="DepartmentName" class="form-control" placeholder="e.g., Computer Science and Engineering" required />
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                        <div class="help-text">Full name of the department</div>
                    </div>

                    <div class="form-group">
                        <label asp-for="DepartmentCode" class="form-label">
                            <i class="fas fa-code"></i> Department Code<span class="required-star">*</span>
                        </label>
                        <input asp-for="DepartmentCode" class="form-control" placeholder="e.g., CSE" required id="deptCode" />
                        <span asp-validation-for="DepartmentCode" class="text-danger"></span>
                        <div class="help-text">Short code (will be converted to uppercase)</div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-align-left"></i> Description
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description of the department"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-user-shield"></i>
                        Department Admin Account
                    </h3>
                    <div class="alert alert-info mb-3">
                        <i class="fas fa-info-circle"></i>
                        <strong>Auto-Create Admin:</strong> An admin account will be automatically created for this department with full management capabilities.
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="CreateAdminAccount" class="form-check-input" type="checkbox" id="createAdminCheck" checked />
                        <label asp-for="CreateAdminAccount" class="form-check-label">
                            <strong>Create Department Admin Account</strong>
                            <div class="help-text">Automatically create an admin account for this department</div>
                        </label>
                    </div>

                    <div id="adminFieldsSection">
                        <div class="form-group">
                            <label asp-for="AdminName" class="form-label">
                                <i class="fas fa-user"></i> Admin Name<span class="required-star">*</span>
                            </label>
                            <input asp-for="AdminName" class="form-control" placeholder="e.g., John Doe" />
                            <span asp-validation-for="AdminName" class="text-danger"></span>
                            <div class="help-text">Full name of the department administrator</div>
                        </div>

                        <div class="form-group">
                            <label asp-for="AdminEmail" class="form-label">
                                <i class="fas fa-envelope"></i> Admin Email<span class="required-star">*</span>
                            </label>
                            <input asp-for="AdminEmail" type="email" class="form-control" placeholder="e.g., admin.cse@rgmcet.edu.in" />
                            <span asp-validation-for="AdminEmail" class="text-danger"></span>
                            <div class="help-text">Admin will use this email to login</div>
                        </div>

                        <div class="form-group">
                            <label asp-for="AdminPassword" class="form-label">
                                <i class="fas fa-lock"></i> Admin Password<span class="required-star">*</span>
                            </label>
                            <input asp-for="AdminPassword" type="password" class="form-control" placeholder="Minimum 6 characters" />
                            <span asp-validation-for="AdminPassword" class="text-danger"></span>
                            <div class="help-text">Minimum 6 characters</div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmAdminPassword" class="form-label">
                                <i class="fas fa-lock"></i> Confirm Password<span class="required-star">*</span>
                            </label>
                            <input asp-for="ConfirmAdminPassword" type="password" class="form-control" placeholder="Re-enter password" />
                            <span asp-validation-for="ConfirmAdminPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-cog"></i>
                        Configuration
                    </h3>

                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label">
                            <strong>Department is Active</strong>
                            <div class="help-text">If unchecked, department will be hidden from system</div>
                        </label>
                    </div>

                    <div class="form-check">
                        <input asp-for="AllowStudentRegistration" class="form-check-input" type="checkbox" />
                        <label asp-for="AllowStudentRegistration" class="form-check-label">
                            <strong>Allow Student Registration</strong>
                            <div class="help-text">Students can register for this department</div>
                        </label>
                    </div>

                    <div class="form-check">
                        <input asp-for="AllowFacultyAssignment" class="form-check-input" type="checkbox" />
                        <label asp-for="AllowFacultyAssignment" class="form-check-label">
                            <strong>Allow Faculty Assignment</strong>
                            <div class="help-text">Faculty can be assigned to subjects in this department</div>
                        </label>
                    </div>

                    <div class="form-check">
                        <input asp-for="AllowSubjectSelection" class="form-check-input" type="checkbox" />
                        <label asp-for="AllowSubjectSelection" class="form-check-label">
                            <strong>Allow Subject Selection</strong>
                            <div class="help-text">Students can select subjects from this department</div>
                        </label>
                    </div>
                </div>

                <div class="button-group">
                    <a href="@Url.Action("ManageDepartments", "SuperAdmin")" class="btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-save"></i> Create Department
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-uppercase department code
        document.querySelector('input[name="DepartmentCode"]').addEventListener('input', function(e) {
            this.value = this.value.toUpperCase();
        });

        // Toggle admin fields based on checkbox
        const createAdminCheck = document.getElementById('createAdminCheck');
        const adminFieldsSection = document.getElementById('adminFieldsSection');
        const adminNameInput = document.querySelector('input[name="AdminName"]');
        const adminEmailInput = document.querySelector('input[name="AdminEmail"]');
        const adminPasswordInput = document.querySelector('input[name="AdminPassword"]');
        const adminConfirmInput = document.querySelector('input[name="ConfirmAdminPassword"]');

        function toggleAdminFields() {
            if (createAdminCheck.checked) {
                adminFieldsSection.style.display = 'block';
                if (adminNameInput) adminNameInput.required = true;
                if (adminEmailInput) adminEmailInput.required = true;
                if (adminPasswordInput) adminPasswordInput.required = true;
                if (adminConfirmInput) adminConfirmInput.required = true;
            } else {
                adminFieldsSection.style.display = 'none';
                if (adminNameInput) adminNameInput.required = false;
                if (adminEmailInput) adminEmailInput.required = false;
                if (adminPasswordInput) adminPasswordInput.required = false;
                if (adminConfirmInput) adminConfirmInput.required = false;
            }
        }

        if (createAdminCheck) {
            createAdminCheck.addEventListener('change', toggleAdminFields);
            // Initialize on page load
            toggleAdminFields();
        }

        // Generate admin email based on department code
        const deptCodeInput = document.getElementById('deptCode');
        
        if (deptCodeInput && adminEmailInput) {
            deptCodeInput.addEventListener('input', function() {
                const deptCode = this.value.toLowerCase();
                if (deptCode && !adminEmailInput.value) {
                    adminEmailInput.value = 'admin.' + deptCode + '@@rgmcet.edu.in';
                }
            });
        }

        console.log('Create Department Form Loaded');
    </script>
</body>
</html>
